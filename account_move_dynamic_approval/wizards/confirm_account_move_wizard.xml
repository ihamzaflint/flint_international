<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="confirm_account_move_wizard_form" model="ir.ui.view">
        <field name="name">confirm.account.move.wizard.form</field>
        <field name="model">confirm.account.move.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <h3>
                    <field name="name" readonly="1"/>
                </h3>
                <footer>
                   <button name="action_post" string="Confirm" class="oe_highlight"
                                type="object" groups="account.group_account_invoice" data-hotkey="q"
                                context="{'validate_analytic': True}"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="confirm_account_move_wizard_action" model="ir.actions.act_window">
        <field name="name">Confirm Move</field>
        <field name="res_model">confirm.account.move.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

</odoo>
