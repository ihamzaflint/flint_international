<odoo>

  <record id="res_config_settings_view_form_inherit" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//setting[@id='proforma_configuration']" position="after">
        <div class="col-12 col-lg-6 o_setting_box" id="email_resource_calendar_block">
          <div class="o_setting_right_pane">
            <span class="o_form_label">Email Sending Calendar</span>
            <div class="text-muted">
                           email working hours
            </div>
            <div class="row mt16">
              <label for="email_resource_calendar_id" string="Email Time" class="col-lg-4 o_light_label"/>
              <field name="email_resource_calendar_id" class="oe_inline"/>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>

</odoo>
