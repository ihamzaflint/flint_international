<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dynamic_approval_request_form" model="ir.ui.view">
        <field name="name">dynamic.approval.request.form</field>
        <field name="model">dynamic.approval.request</field>
        <field name="arch" type="xml">
            <form create="0" delete="0" edit="0" string="Approval Request Log">
                <header>
                    <button invisible="status != 'pending'" name="action_send_reminder_email" string="Send Reminder Email" type="object"/>
                    <field name="status" statusbar_visible="new,pending,approved" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="res_name" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="res_model"/>
                            <field name="res_id"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="user_id"/>
                            <field name="group_id"/>
                        </group>
                        <group>
                            <field name="approve_date"/>
                            <field name="approved_by"/>
                            <field name="reject_date"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="reject_reason"/>
                            <field name="approve_note"/>
                        </group>
                    </group>
                </sheet>
            </form></field>
    </record>
    <record id="dynamic_approval_request_tree" model="ir.ui.view">
        <field name="name">dynamic.approval.request.tree</field>
        <field name="model">dynamic.approval.request</field>
        <field name="arch" type="xml">
            <tree create="0" delete="0" edit="0" string="Approval Request Log">
                <field name="sequence"/>
                <field name="res_model"/>
                <field name="res_id"/>
                <field name="res_name"/>
                <field name="user_id"/>
                <field name="group_id"/>
                <field name="approved_by"/>
                <field name="approve_date"/>
                <field name="approve_note"/>
                <field name="reject_date"/>
                <field name="reject_reason"/>
                <field decoration-danger="status in ['rejected','cancel']" decoration-info="status == 'new'" decoration-success="status == 'approved'" name="status" widget="badge"/>
            </tree></field>
    </record>
    <record id="dynamic_approval_request_search" model="ir.ui.view">
        <field name="name">dynamic.approval.request.search</field>
        <field name="model">dynamic.approval.request</field>
        <field name="arch" type="xml">
            <search string="Search Approval Request">
                <field name="res_name"/>
                <field name="res_model"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter context="{'group_by' : 'res_model'}" domain="[]" name="model" string="Model"/>
                    <filter context="{'group_by': 'user_id'}" domain="[]" name="user" string="User"/>
                    <filter context="{'group_by': 'group_id'}" domain="[]" name="user" string="Group"/>
                    <filter context="{'group_by': 'status'}" domain="[]" name="status" string="Status"/>
                </group>
            </search></field>
    </record>
    <record id="dynamic_approval_request_action" model="ir.actions.act_window">
        <field name="name">Approval Request Log</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dynamic.approval.request</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="dynamic_approval_request_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Log for a approval requests
            </p></field>
    </record>
</odoo>
