<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="dynamic_approval_form" model="ir.ui.view">
        <field name="name">dynamic.approval.form</field>
        <field name="model">dynamic.approval</field>
        <field name="arch" type="xml">
            <form string="Approval Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Purchase Order Approval" required="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="model_id" options="{'no_create': True}"/>
                            <field invisible="1" name="model"/>
                        </group>
                        <group>
                            <field name="sequence"/>
                            <field groups="base.group_multi_company" name="company_id" options="{'no_create': True}"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="conditions" string="Conditions">
                            <field name="approval_condition_ids"><tree string="Approval Conditions">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="condition_type" optional="show"/>
                                    <field name="filter_domain" optional="hide"/>
                                    <field name="field_name" optional="hide"/>
                                    <field name="operator" optional="hide"/>
                                    <field name="value_type" optional="hide"/>
                                    <field name="value" optional="hide"/>
                                    <field invisible="1" name="company_id"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <div class="oe_title">
                                            <h1>
                                                <field name="name" placeholder="Budget more than 90k"/>
                                            </h1>
                                        </div>
                                        <group>
                                            <group>
                                                <field invisible="1" name="model"/>
                                                <field name="condition_type" required="1"/>
                                            </group>
                                            <group>
                                                <field name="sequence"/>
                                                <field invisible="1" name="company_id"/>
                                            </group>
                                        </group>
                                        <label for="field_name" invisible="condition_type != 'field_selection'" required="condition_type == 'field_selection'" string="Condition"/>
                                        <div class="o_row" invisible="condition_type != 'field_selection'">
                                            <field name="field_name" placeholder="ex. partner_id.total_invoiced" required="condition_type == 'field_selection'"/>
                                            <field name="operator" required="condition_type == 'field_selection'"/>
                                            <field name="value_type" required="condition_type == 'field_selection'"/>
                                            <field name="value" required="condition_type == 'field_selection'"/>
                                        </div>
                                        <group>
                                            <field invisible="condition_type != 'python_code'" name="python_code" options="{'mode': 'python'}" required="condition_type == 'python_code'" widget="ace"/>
                                            <field invisible="condition_type != 'domain'" name="filter_domain" options="{'model': 'model', 'in_dialog': true}" required="condition_type == 'domain'" widget="domain"/>
                                        </group>
                                    </sheet>
                                </form></field>
                        </page>
                        <page name="level" string="Levels">
                            <field name="approval_level_ids"><tree string="Approval Levels">
                                    <field name="sequence" widget="handle"/>
                                    <field name="user_id"/>
                                    <field name="group_id"/>
                                    <field invisible="1" name="company_id"/>
                                </tree>
                                <form>
                                    <sheet>
                                        <group>
                                            <group string="Approver Source">
                                                <field name="user_id"/>
                                                <field name="group_id"/>
                                            </group>
                                            <group>
                                                <field name="sequence"/>
                                                <field invisible="1" name="company_id"/>
                                            </group>
                                        </group>
                                    </sheet>
                                </form></field>
                        </page>
                        <page name="configuration" string="Configuration">
                            <group>
                                <group string="Under Approval Options">
                                    <field context="{'default_model_id': model_id}" domain="[('model_id', '=', model_id)]" name="email_template_to_approve_id" string="Email Template"/>
                                    <field name="need_create_activity_to_approve" string="Need Activity for next Approval User" widget="boolean_toggle"/>
                                    <field context="{'default_model_id': model_id}" domain="[('model_id', '=', model_id),('usage', '=', 'ir_actions_server')]" name="to_approve_server_action_id" string="Trigger Server Action"/>
                                    <field name="reminder_period_to_approve" string="Reminder Every (Hours)"/>
                                    <field context="{'default_model_id': model_id}" domain="[('model_id', '=', model_id)]" invisible="reminder_period_to_approve == 0" name="reminder_pending_approver_email_template_id" string="Reminder Pending Email Template"/>
                                </group>
                                <group string="After Final Approval Options">
                                    <field domain="[('model_id', '=', model_id),('ttype', '=', 'many2one'),('relation', '=', 'res.users')]" name="default_notify_user_field_after_final_approve_id" options="{'no_create':true}" string="Default User for Activity"/>
                                    <field domain="[('model_id', '=', model_id),('ttype', '=', 'many2one'),('relation', '=', 'res.users')]" name="notify_user_field_after_final_approve_ids" options="{'no_create':true}" string="Notify Users" widget="many2many_tags"/>
                                    <field context="{'default_model_id': model_id}" domain="[('model_id', '=', model_id)]" name="email_template_after_final_approve_id" string="Email Template"/>
                                    <field context="{'default_model_id': model_id}" domain="[('model_id', '=', model_id),('usage', '=', 'ir_actions_server')]" name="after_final_approve_server_action_id" string="Trigger Server Action"/>
                                </group>
                            </group>
                            <group>
                                <group string="Rejection Options">
                                    <field domain="[('model_id', '=', model_id),('ttype', '=', 'many2one'),('relation', '=', 'res.users')]" name="default_notify_user_field_rejection_id" options="{'no_create':true}" string="Default User for Activity"/>
                                    <field domain="[('model_id', '=', model_id),('ttype', '=', 'many2one'),('relation', '=', 'res.users')]" name="notify_user_field_rejection_ids" options="{'no_create':true}" string="Notify Users" widget="many2many_tags"/>
                                    <field name="need_notify_rejection_approved_user" string="Need Notify Approved Users" widget="boolean_toggle"/>
                                    <field context="{'default_model_id': model_id}" domain="[('model_id', '=', model_id)]" name="rejection_email_template_id" string="Email Template"/>
                                    <field context="{'default_model_id': model_id}" domain="[('model_id', '=', model_id),('usage', '=', 'ir_actions_server')]" name="rejection_server_action_id" string="Trigger Server Action"/>
                                </group>
                                <group string="Recall Options">
                                    <field domain="[('model_id', '=', model_id),('ttype', '=', 'many2one'),('relation', '=', 'res.users')]" name="default_notify_user_field_recall_id" options="{'no_create':true}" string="Default User for Activity"/>
                                    <field domain="[('model_id', '=', model_id),('ttype', '=', 'many2one'),('relation', '=', 'res.users')]" name="notify_user_field_recall_ids" options="{'no_create':true}" string="Notify Users" widget="many2many_tags"/>
                                    <field name="need_notify_recall_approved_user" string="Need Notify Approved Users" widget="boolean_toggle"/>
                                    <field context="{'default_model_id': model_id}" domain="[('model_id', '=', model_id)]" name="recall_email_template_id" string="Email Template"/>
                                    <field context="{'default_model_id': model_id}" domain="[('model_id', '=', model_id),('usage', '=', 'ir_actions_server')]" name="recall_server_action_id" string="Trigger Server Action"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form></field>
    </record>
    <record id="dynamic_approval_tree" model="ir.ui.view">
        <field name="name">dynamic.approval.tree</field>
        <field name="model">dynamic.approval</field>
        <field name="arch" type="xml">
            <tree string="Approval Configuration">
                <field name="sequence" widget="handle"/>
                <field name="model_id"/>
                <field name="name"/>
                <field groups="base.group_multi_company" name="company_id"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="approval_condition_ids"/>
                <field name="approval_level_ids"/>
            </tree></field>
    </record>
    <record id="dynamic_approval_search" model="ir.ui.view">
        <field name="name">dynamic.approval.search</field>
        <field name="model">dynamic.approval</field>
        <field name="arch" type="xml">
            <search string="Search Approval Configuration">
                <field name="name"/>
                <field filter_domain="['|',('model_id', 'ilike', self),('model', 'ilike', self)]" name="model_id"/>
                <separator/>
                <filter domain="[('active', '=', True)]" name="active" string="Active"/>
                <filter domain="[('active', '=', False)]" name="inactive" string="Archived"/>
                <separator/>
                <group expand="0" name="group_by" string="Group By">
                    <filter context="{'group_by' : 'model_id'}" domain="[]" name="model" string="Model"/>
                    <filter context="{'group_by': 'company_id'}" domain="[]" groups="base.group_multi_company" name="company" string="Company"/>
                </group>
            </search></field>
    </record>
    <record id="dynamic_approval_action" model="ir.actions.act_window">
        <field name="name">Approval Configuration</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">dynamic.approval</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="dynamic_approval_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Register a approval configuration
            </p>
            <p>
                Approval is a used to dynamic set workflow for any document you have.
            </p></field>
    </record>
</odoo>
