<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_company_form_inherit_saib" model="ir.ui.view">
        <field name="name">res.company.form.inherit.saib</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="SAIB Bank Integration" name="saib_bank_integration" groups="base.group_user">
                    <group>
                        <group>
                            <field name="mol_establishment_id" placeholder="Enter MOL Establishment ID"/>
                            <field name="saib_bank_account_id" context="{'default_company_id': id}" 
                                   domain="[('company_id', '=', id)]"
                                   placeholder="Select SAIB Bank Account"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
