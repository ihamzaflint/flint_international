<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Tree View -->
    <record id="view_saib_bank_statement_tree" model="ir.ui.view">
        <field name="name">saib.bank.statement.tree</field>
        <field name="model">saib.bank.statement</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'"
                  decoration-success="state == 'posted'"
                  decoration-warning="state == 'confirmed'"
                  decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="bank_account_id"/>
                <field name="opening_balance"/>
                <field name="closing_balance"/>
                <field name="total_debit"/>
                <field name="total_credit"/>
                <field name="currency_id" invisible="1"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_saib_bank_statement_form" model="ir.ui.view">
        <field name="name">saib.bank.statement.form</field>
        <field name="model">saib.bank.statement</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" 
                            string="Confirm" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <button name="action_post" 
                            string="Post" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'confirmed'"/>
                    <button name="action_draft" 
                            string="Reset to Draft" 
                            type="object"
                            invisible="state not in ['confirmed', 'cancelled']"/>
                    <button name="action_cancel" 
                            string="Cancel" 
                            type="object"
                            invisible="state in ['posted', 'cancelled']"/>
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,confirmed,posted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date"/>
                            <field name="bank_account_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="currency_id" groups="base.group_multi_currency"/>
                        </group>
                        <group>
                            <field name="opening_balance"/>
                            <field name="closing_balance"/>
                            <field name="total_debit"/>
                            <field name="total_credit"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Statement Lines" name="statement_lines">
                            <field name="line_ids" widget="one2many">
                                <tree editable="bottom">
                                    <field name="date"/>
                                    <field name="name"/>
                                    <field name="ref"/>
                                    <field name="partner_id"/>
                                    <field name="transaction_type"/>
                                    <field name="amount"/>
                                    <field name="currency_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_saib_bank_statement_search" model="ir.ui.view">
        <field name="name">saib.bank.statement.search</field>
        <field name="model">saib.bank.statement</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="bank_account_id"/>
                <field name="date"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
                <filter string="Posted" name="posted" domain="[('state', '=', 'posted')]"/>
                <filter string="Cancelled" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="This Month" name="this_month" 
                        domain="[('date', '&gt;=', (context_today() + relativedelta(day=1)).strftime('%Y-%m-%d')),
                                ('date', '&lt;', (context_today() + relativedelta(months=1, day=1)).strftime('%Y-%m-%d'))]"/>
                <group expand="0" string="Group By">
                    <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    <filter string="Bank Account" name="group_by_account" context="{'group_by': 'bank_account_id'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Pivot View -->
    <record id="view_saib_bank_statement_pivot" model="ir.ui.view">
        <field name="name">saib.bank.statement.pivot</field>
        <field name="model">saib.bank.statement</field>
        <field name="arch" type="xml">
            <pivot string="Bank Statements Analysis">
                <field name="date" type="row"/>
                <field name="bank_account_id" type="row"/>
                <field name="total_debit" type="measure"/>
                <field name="total_credit" type="measure"/>
            </pivot>
        </field>
    </record>

    <!-- Action -->
    <record id="action_saib_bank_statement" model="ir.actions.act_window">
        <field name="name">Bank Statements</field>
        <field name="res_model">saib.bank.statement</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="search_view_id" ref="view_saib_bank_statement_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first bank statement
            </p>
            <p>
                Keep track of your bank statements and reconcile them with your transactions.
            </p>
        </field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_saib_bank_statement"
              name="Bank Statements"
              parent="menu_saib_bank"
              action="action_saib_bank_statement"
              sequence="30"/>

</odoo>
