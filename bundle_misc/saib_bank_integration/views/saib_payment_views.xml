<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_saib_payment_tree" model="ir.ui.view">
        <field name="name">saib.payment.tree</field>
        <field name="model">saib.payment</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-success="state == 'confirmed'" decoration-danger="state == 'failed'">
                <field name="name"/>
                <field name="payment_type"/>
                <field name="partner_id"/>
                <field name="amount"/>
                <field name="currency_id"/>
                <field name="execution_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_saib_payment_form" model="ir.ui.view">
        <field name="name">saib.payment.form</field>
        <field name="model">saib.payment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_send_to_bank" string="Send to Bank" type="object" 
                            class="oe_highlight" invisible="state not in ['draft']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="payment_type"/>
                            <field name="partner_id"/>
                            <field name="amount"/>
                            <field name="currency_id"/>
                        </group>
                        <group>
                            <field name="execution_date"/>
                            <field name="debtor_account"/>
                            <field name="creditor_account"/>
                            <field name="bank_reference"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_saib_payment" model="ir.actions.act_window">
        <field name="name">SAIB Payments</field>
        <field name="res_model">saib.payment</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_saib_bank" name="SAIB Bank" sequence="100" web_icon="saib_bank_integration,static/description/icon.png"/>
    <menuitem id="menu_saib_payment" name="Payments" parent="menu_saib_bank" action="action_saib_payment" sequence="10"/>
</odoo>
