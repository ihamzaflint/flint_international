<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_bank_form_inherit_saib" model="ir.ui.view">
        <field name="name">res.partner.bank.form.inherit.saib</field>
        <field name="model">res.partner.bank</field>
        <field name="inherit_id" ref="account.view_partner_bank_form_inherit_account"/>
        <field name="arch" type="xml">
            <xpath expr="//form[@name='bank_account_form']/sheet[1]" position="before">
                <header>
                    <button name="set_bank_from_iban"
                            string="Detect Bank from IBAN"
                            type="object"
                            class="btn-primary"
                            invisible="[('acc_number', '=', False)]"
                            help="Automatically detect and set the bank based on the IBAN number"/>
                </header>
            </xpath>
        </field>
    </record>
</odoo>
