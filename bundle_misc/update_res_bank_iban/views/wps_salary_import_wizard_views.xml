<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_wps_salary_import_wizard_form" model="ir.ui.view">
        <field name="name">wps.salary.import.wizard.form</field>
        <field name="model">wps.salary.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import WPS Salary Data">
                <group>
                    <field name="file" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                    <field name="sheet_name"/>
                </group>
                <footer>
                    <button name="action_import" string="Import" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wps_salary_import_wizard" model="ir.actions.act_window">
        <field name="name">Import WPS Salary Data</field>
        <field name="res_model">wps.salary.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_wps_salary_import"
              name="Import WPS Salary"
              parent="contacts.menu_contacts"
              action="action_wps_salary_import_wizard"/>
</odoo>