<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_form_inherit" model="ir.ui.view">
        <field name="name">sale.order.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='other_information']" position="before">
                <page name="approvers" string="Approvers">
                    <field name="dynamic_approve_request_ids" readonly="1">
                        <tree editable="bottom">
                            <field name="sequence"/>
                            <field name="user_id"/>
                            <field name="group_id"/>
                            <field name="approve_date"/>
                            <field name="approve_note"/>
                            <field name="reject_date"/>
                            <field name="reject_reason"/>
                            <field name="status"/>
                        </tree></field>
                </page>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="invisible">state in ['cancel', 'done', 'under_approval'] or id == False</attribute>
            </xpath>
            <xpath expr="//header" position="inside">
                <field invisible="1" name="appear_recall_button"/>
                <field invisible="1" name="dynamic_approve_pending_group"/>
                <field invisible="1" name="is_dynamic_approval_requester"/>
                <button class="btn-primary"
                        invisible="state not in ['draft', 'sent'] or is_dynamic_approval_requester == False"
                        name="action_dynamic_approval_request" string="Request Approval" type="object"/>
                <button class="btn-primary" invisible="dynamic_approve_pending_group == False or state == 'cancel'"
                        name="%(base_dynamic_approval.approve_dynamic_approval_wizard_action)d" string="Approve"
                        type="action"/>
                <button invisible="state != 'under_approval' or (dynamic_approve_pending_group == False and state == 'under_approval')"
                        name="%(base_dynamic_approval.reject_dynamic_approval_wizard_action)d" string="Reject"
                        type="action"/>
                <button invisible="state != 'under_approval' or appear_recall_button == False"
                        name="%(base_dynamic_approval.recall_dynamic_approval_wizard_action)d" string="Recall"
                        type="action"/>
            </xpath>
            <xpath expr="//field[@name='state']" position="attributes">
                <attribute name="statusbar_visible">
                    draft,sent,under_approval,approved,sale</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="attributes">
                <attribute name="invisible">state not in [
                    'approved'] or is_dynamic_approval_requester == False</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="readonly">state not in ('draft', 'sent')</attribute>
            </xpath>
            <xpath expr="//page[@name='other_information']" position="after">
                <page name="technical" string="Technical">
                    <group>
                        <field groups="base.group_no_one" name="dynamic_approval_id" widget="selection"/>
                        <field groups="base.group_no_one" name="approve_requester_id"/>
                    </group>
                </page>

            </xpath>
        </field>
    </record>
</odoo>
