<odoo>
    <record id="iban_change_request_form" model="ir.ui.view">
        <field name="name">iban.change.request.form</field>
        <field name="model">iban.change.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit"  groups="helpdesk.group_helpdesk_user"
                            string="Submit" invisible="state != 'draft'"  type="object" class="oe_highlight" />
                    <button name="action_approve" string="Approve" invisible="state != 'submit'" groups="hr.group_hr_manager"
                            type="object" class="oe_highlight" />
                    <button name="action_reject" string="Reject" groups="hr.group_hr_manager"
                            invisible="state != 'submit'"  type="object" class="oe_highlight" />
                    <field name="state" statusbar_visible="draft,submit,approve,reject,done" widget="statusbar"/>
                </header>
                <sheet>
                   <group>
                       <group>
                           <field name="employee_id"/>
                           <field name="acc_number"/>
                           <field name="bank_id"/>
                           <field name="rejection_reason"  invisible="state != 'reject'" />
                       </group>
                   </group>

                </sheet>

            </form>
        </field>
      </record>

     <record id="iban_change_request_tree" model="ir.ui.view">
        <field name="name">iban.change.request.tree</field>
        <field name="model">iban.change.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="acc_number"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

     <record id="iban_change_request_action" model="ir.actions.act_window">
        <field name="name">IBan Change Request</field>
        <field name="res_model">iban.change.request</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="helpdesk_ticket_other_services"
        name="Other Services"
        parent="helpdesk.helpdesk_ticket_menu_main"
        sequence="20"/>


    <menuitem
        id="iban_change_request_menu"
        name="IBAN Change Request"
        action="iban_change_request_action"
        parent ="helpdesk_ticket_other_services"
        sequence="10"/>


</odoo>