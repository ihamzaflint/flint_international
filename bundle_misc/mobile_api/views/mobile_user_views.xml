<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Mobile User Form View -->
    <record id="view_mobile_user_form" model="ir.ui.view">
        <field name="name">mobile.user.form</field>
        <field name="model">mobile.user</field>
        <field name="arch" type="xml">
            <form string="Mobile User">
                <header>
                    <button name="generate_new_api_key" string="Generate New API Key" type="object" class="oe_highlight" groups="mobile_api.group_mobile_api_admin"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="user_id" options="{'no_create': True}"/>
                            <field name="company_id" options="{'no_create': True}" groups="base.group_multi_company"/>
                            <field name="active"/>
                            <field name="last_login" readonly="1"/>
                        </group>
                        <group>
                            <field name="device_id"/>
                            <field name="device_name"/>
                            <field name="device_model"/>
                            <field name="platform"/>
                            <field name="app_version"/>
                        </group>
                    </group>
                    <group string="API Access" groups="mobile_api.group_mobile_api_admin">
                        <field name="api_key" readonly="1"/>
                        <field name="token_expiry" readonly="1"/>
                        <field name="fcm_token"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Mobile User Tree View -->
    <record id="view_mobile_user_tree" model="ir.ui.view">
        <field name="name">mobile.user.tree</field>
        <field name="model">mobile.user</field>
        <field name="arch" type="xml">
            <tree string="Mobile Users">
                <field name="name"/>
                <field name="user_id"/>
                <field name="company_id" groups="base.group_multi_company"/>
                <field name="device_name"/>
                <field name="platform"/>
                <field name="app_version"/>
                <field name="last_login"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Mobile User Search View -->
    <record id="view_mobile_user_search" model="ir.ui.view">
        <field name="name">mobile.user.search</field>
        <field name="model">mobile.user</field>
        <field name="arch" type="xml">
            <search string="Mobile Users">
                <field name="name"/>
                <field name="user_id"/>
                <field name="device_id"/>
                <field name="device_name"/>
                <field name="platform"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                <filter string="Android" name="android" domain="[('platform', '=', 'android')]"/>
                <filter string="iOS" name="ios" domain="[('platform', '=', 'ios')]"/>
                <group expand="0" string="Group By">
                    <filter string="User" name="group_by_user" context="{'group_by': 'user_id'}"/>
                    <filter string="Platform" name="group_by_platform" context="{'group_by': 'platform'}"/>
                    <filter string="Company" name="group_by_company" context="{'group_by': 'company_id'}" groups="base.group_multi_company"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Mobile User Action -->
    <record id="action_mobile_user" model="ir.actions.act_window">
        <field name="name">Mobile Users</field>
        <field name="res_model">mobile.user</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No mobile users found
            </p>
            <p>
                Mobile users are created when users authenticate through the mobile app.
            </p>
        </field>
    </record>

    <!-- Add Mobile Devices tab to User form -->
    <record id="view_users_form_mobile" model="ir.ui.view">
        <field name="name">res.users.form.mobile</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Mobile Devices" invisible="mobile_user_count == 0">
                    <field name="mobile_user_ids" readonly="1">
                        <tree>
                            <field name="device_name"/>
                            <field name="device_model"/>
                            <field name="platform"/>
                            <field name="app_version"/>
                            <field name="last_login"/>
                            <field name="active"/>
                        </tree>
                    </field>
                </page>
            </notebook>
            <field name="partner_id" position="after">
                <field name="mobile_user_count" invisible="1"/>
            </field>
        </field>
    </record>
</odoo>
