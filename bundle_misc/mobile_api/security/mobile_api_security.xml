<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security groups -->
        <record id="group_mobile_api_user" model="res.groups">
            <field name="name">Mobile API / User</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
        
        <record id="group_mobile_api_admin" model="res.groups">
            <field name="name">Mobile API / Administrator</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('group_mobile_api_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
    </data>
    
    <data noupdate="1">
        <!-- Multi-company rules -->
        <!-- Rule for mobile.user model -->
        <record id="mobile_user_comp_rule" model="ir.rule">
            <field name="name">Mobile User multi-company rule</field>
            <field name="model_id" ref="model_mobile_user"/>
            <field name="domain_force">['|', 
                ('company_id', '=', False), 
                ('company_id', 'in', company_ids)
            ]</field>
            <field name="global" eval="True"/>
        </record>
        
        <!-- Rule for helpdesk.ticket attachments -->
        <record id="mobile_api_attachment_comp_rule" model="ir.rule">
            <field name="name">Mobile API Attachments multi-company rule</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="domain_force">['|', 
                ('company_id', '=', False), 
                ('company_id', 'in', company_ids),
                ('res_model', 'in', ['helpdesk.ticket', 'mail.message'])
            ]</field>
            <field name="global" eval="True"/>
        </record>
        
        <!-- Rule for helpdesk.ticket model -->
        <record id="mobile_api_helpdesk_ticket_comp_rule" model="ir.rule">
            <field name="name">Mobile API Helpdesk Ticket multi-company rule</field>
            <field name="model_id" ref="helpdesk.model_helpdesk_ticket"/>
            <field name="domain_force">['|', 
                ('company_id', '=', False), 
                ('company_id', 'in', company_ids)
            ]</field>
            <field name="global" eval="True"/>
        </record>
    </data>
</odoo>
