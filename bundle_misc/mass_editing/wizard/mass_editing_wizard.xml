<odoo>
    <record id="view_mass_editing_wizard_form" model="ir.ui.view">
        <field name="model">mass.editing.wizard</field>
        <field name="arch" type="xml">
            <form>
                <header/>
                <p class="oe_grey" invisible="message == False">
                    <field name="message"/>
                </p>
                <p class="alert alert-info" invisible="operation_description_info == False" role="alert">
                    <field name="operation_description_info"/>
                </p>
                <p class="alert alert-warning" invisible="operation_description_warning == False" role="alert">
                    <field name="operation_description_warning"/>
                </p>
                <p class="alert alert-danger" invisible="operation_description_danger == False" role="alert">
                    <field name="operation_description_danger"/>
                </p>
                <group>
                    <group col="6" colspan="4" name="group_field_list">
                    </group>
                </group>
                <footer>
                    <button class="oe_highlight" name="button_apply" string="Apply" type="object"/>
                    <button class="oe_link" special="cancel" string="Cancel"/>
                </footer>
            </form></field>
    </record>
</odoo>
