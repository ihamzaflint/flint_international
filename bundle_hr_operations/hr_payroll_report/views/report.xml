<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payroll_report2_view_pivot" model="ir.ui.view">
        <field name="name">payroll.report2.pivot</field>
        <field name="model">hr.payroll.report2</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="analytic_account_id" type="row"/>
                <field name="department_id" type="row"/>
                <field name="employee_id" type="row"/>
                <field name="salary_rule_name" type="col"/>
                <field name="amount" type="measure"/>
            </pivot></field>
    </record>
    <record id="payroll_report_action2" model="ir.actions.act_window">
        <field name="name">Payroll (Detailed)</field>
        <field name="res_model">hr.payroll.report2</field>
        <field name="view_mode">pivot</field>
        <field name="help">This report performs payroll reporting.</field>
    </record>
    <record id="view_payroll_report_action2_wizard" model="ir.ui.view">
        <field name="name">hr.payroll.report2.wizard.form</field>
        <field name="model">hr.payroll.report2.wizard</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <group invisible="payslip_run_id != False">
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="payslip_run_id"/>
                    </group>
                </group>
                <footer>
                    <button class="btn-primary" name="button_open_report" string="Open" type="object"/>
                    <button class="btn-secondary" special="cancel" string="Cancel"/>
                </footer>
            </form></field>
    </record>
    <record id="payroll_report_action2_wizard" model="ir.actions.act_window">
        <field name="name">Payroll (Detailed)</field>
        <field name="res_model">hr.payroll.report2.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem action="payroll_report_action2_wizard" id="menu_report_payroll2" name="Payroll (Detailed)" parent="hr_payroll.menu_hr_payroll_report" sequence="15"/>
</odoo>
