<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_payslip_run_view_form" model="ir.ui.view">
        <field name="name">hr.payslip.run.form.report</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_paid']" position="before">
                <button name="export_payslips_xlsx" string="PAYROLL DETAILED (XLSX)" type="object"/>
                <button name="export_payslips_batch_xlsx" string="PAYROLL EXPORT DETAILED (XLSX)" type="object"/>
                <button invisible="state not in ['verify','waiting_approval','approved','close','paid']" name="export_draft_entry" string="Draft Entry (XLSX)" type="object"/>
            </xpath></field>
    </record>
