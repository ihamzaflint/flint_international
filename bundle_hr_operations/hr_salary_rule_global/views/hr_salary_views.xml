<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_salary_rule_form_global" model="ir.ui.view">
        <field name="name">hr.salary.rule.global.form</field>
        <field name="model">hr.salary.rule</field>
        <field name="inherit_id" ref="hr_payroll.hr_salary_rule_form"/>
        <field name="arch" type="xml">
            <field name="struct_id" position="replace">
                <field invisible="1" name="is_global"/>
                <field invisible="is_global == True" name="struct_id" required="is_global == False"/></field></field>
    </record>
    <record id="hr_payroll.action_salary_rule_form" model="ir.actions.act_window">
        <field name="name">Salary Rules</field>
        <field name="res_model">hr.salary.rule</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('is_global','=',False)]</field>
        <field name="context">{'search_default_group_by_struct_id': 1}</field>
        <field name="search_view_id" ref="hr_payroll.view_hr_rule_filter"/>
    </record>
    <!-- Global Rules -->
    <record id="hr_global_rule_form" model="ir.ui.view">
        <field name="name">hr.global.rule.form</field>
        <field name="model">hr.salary.rule</field>
        <field name="priority">32</field>
        <field name="arch" type="xml">
            <form string="Salary Rules">
                <sheet>
                    <widget bg_color="bg-danger" invisible="active == True" name="web_ribbon" title="Archived"/>
                    <label class="oe_edit_only" for="name"/>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <label class="oe_edit_only" for="category_id"/>
                    <h2>
                        <field name="category_id"/>
                    </h2>
                    <group col="4" name="main_details">
                        <field name="code"/>
                        <field name="sequence"/>
                        <field name="active" widget="boolean_toggle"/>
                        <field name="appears_on_payslip"/>
                    </group>
                    <notebook colspan="6">
                        <page name="general" string="General">
                            <group name="general_conditions">
                                <group string="Computation">
                                    <field name="amount_select"/>
                                </group>
                                <group string="Company Contribution">
                                    <field name="partner_id"/>
                                </group>
                            </group>
                        </page>
                        <page name="description" string="Description">
                            <field name="note"/>
                        </page>
                        <page name="accounting" string="Accounting">
                            <group colspan="4">
                                <field name="account_debit"/>
                                <field name="account_credit"/>
                                <field groups="analytic.group_analytic_accounting" name="analytic_account_id"/>
                                <field name="not_computed_in_net"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form></field>
    </record>
    <record id="view_hr_global_rule_filter" model="ir.ui.view">
        <field name="name">hr.global.rule.select</field>
        <field name="model">hr.salary.rule</field>
        <field name="arch" type="xml">
            <search string="Search Global Rule">
                <field filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]" name="name" string="Salary Rules"/>
                <field name="category_id"/>
                <field name="condition_range_min"/>
                <separator/>
                <filter domain="[('active', '=', False)]" name="archived" string="Archived"/>
                <group col="8" colspan="4" expand="0" string="Group By">
                    <filter context="{'group_by': 'category_id'}" name="head" string="Category"/>
                </group>
            </search></field>
    </record>
    <record id="action_salary_rule_form_global" model="ir.actions.act_window">
        <field name="name">Global Rules</field>
        <field name="res_model">hr.salary.rule</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="domain">[('is_global','=',True)]</field>
        <field name="search_view_id" ref="view_hr_global_rule_filter"/>
    </record>
    <record id="action_salary_rule_tree_global_form_view" model="ir.actions.act_window.view">
        <field eval="1" name="sequence"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hr_payroll.hr_salary_rule_list"/>
        <field name="act_window_id" ref="action_salary_rule_form_global"/>
    </record>
    <record id="action_salary_rule_form_global_form_view" model="ir.actions.act_window.view">
        <field eval="2" name="sequence"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_global_rule_form"/>
        <field name="act_window_id" ref="action_salary_rule_form_global"/>
    </record>
