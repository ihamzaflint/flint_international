<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="account_payment_form_view_on_hold_payment">
        <field name="name">account.payment.form.view.on.hold.payment</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_post']" position="after">
                <button name="on_hold_process"
                        string="On-Hold Process"
                        invisible="state != 'draft'"
                        type="object"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>