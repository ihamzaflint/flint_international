<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_helpdesk_stage_form_inherit" model="ir.ui.view">
        <field name="name">helpdesk.stage.form.inherit</field>
        <field name="model">helpdesk.stage</field>
        <field name="inherit_id" ref="helpdesk.helpdesk_stage_view_form"/>
        <field name="arch" type="xml">
            <field name="sequence" position="after">
                <field name="is_closed" widget="boolean_toggle"/>
                <field name="under_approval" widget="boolean_toggle"/>
                <field name="is_draft" widget="boolean_toggle"/>
                <field name="in_progress" widget="boolean_toggle"/>
                <field name="is_operation_manager_reject" widget="boolean_toggle"/>
                <field name="is_on_hold" widget="boolean_toggle"/>
            </field>
        </field>
    </record>
</odoo>