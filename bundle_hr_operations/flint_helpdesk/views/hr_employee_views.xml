<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HR Employee Form View Extension -->
    <record id="hr_employee_view_form_inherit_insurance" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.insurance</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hr_settings']//group" position="inside">
                <field name="insurance_class_id" options="{'no_create': True, 'no_open': True}" groups="hr.group_hr_user,helpdesk.group_helpdesk_manager"/>
            </xpath>
        </field>
    </record>
</odoo>
