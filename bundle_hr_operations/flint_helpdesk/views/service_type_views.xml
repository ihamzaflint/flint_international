<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="service_type_form_view_helpdesk_inherit" model="ir.ui.view">
        <field name="name">service.type.form.view.helpdesk.inherit</field>
        <field name="model">service.type</field>
        <field name="inherit_id" ref="scs_operation.service_type_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='code']" position="after">
                <field name="helpdesk_type_id"/>
                <field name="is_logistics" invisible="1"/>
                <field name="logistic_order_type" invisible="is_logistics == False"
                required="is_logistics == True"/>
            </xpath>
        </field>
    </record>
</odoo>