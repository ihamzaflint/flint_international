<odoo>
	    <record id="email_template_employee_expiry" model="mail.template">
            <field name="name">Employee: Iqama Expiry Details</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="subject">Employee Iqama Expiry Details</field>
            <field name="auto_delete" eval="False"/>
            <field name="lang">	{{object.user_id.lang or user.lang }}</field>
            <field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
				    <p style="margin: 0px; padding: 0px; font-size: 13px;">
				        <b>Hello Team,</b>
				        <br/>
				        Please find the attachment list for the employee Iqama expiring soon. 
				    </p>
				</div>
            </field>
        </record>

        <record id="email_template_employee_contract" model="mail.template">
            <field name="name">Employee: Contract Expiry Details</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="subject">Employee Contract Expiry Details</field>
            <field name="auto_delete" eval="False"/>
            <field name="lang">	{{object.user_id.lang or user.lang }}</field>
            <field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
				    <p style="margin: 0px; padding: 0px; font-size: 13px;">
				        <b>Hello Team,</b>
				        <br/>
				        Please find the attachment list for the employee Contract expiring soon. 
				    </p>
				</div>
            </field>
        </record>


</odoo>