<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Email template for flight logistics -->
        <record id="email_template_flight_logistics" model="mail.template">
            <field name="name">Flight Logistics Order - Send to Employee</field>
            <field name="model_id" ref="model_logistic_order"/>
            <field name="subject">Flight Logistics Order ${object.name} - Approved</field>
            <field name="email_from">${user.email_formatted | safe}</field>
            <field name="email_to">${object.employee_id.work_email | safe}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.employee_id.name},
                        <br/><br/>
                        Your flight logistics order (${object.name}) has been approved.
                        <br/><br/>
                        Please find attached the detailed report of your flight logistics order.
                        <br/><br/>
                        You can access the order using this link:
                        <br/>
                        <a href="${object.selection_link}">${object.selection_link}</a>
                        <br/><br/>
                        Flight Details:
                        <br/>
                        - Departure Date: ${object.departure_date}
                        <br/>
                        - Return Date: ${object.return_date}
                        <br/><br/>
                        Best regards,
                        <br/>
                        ${user.name}
                    </p>
                </div>
            </field>
            <field name="lang">${object.employee_id.lang}</field>
            <field name="auto_delete" eval="True"/>
        </record>
        	<record id="email_template_gov_pay_approve" model="mail.template">
            <field name="name">Government Payment Update</field>
            <field name="model_id" ref="scs_operation.model_government_payment"/>
            <field name="subject">Government Payment Ref: {{object.saddad_no}}</field>
            <field name="auto_delete" eval="True"/>
            <field name="email_from"></field>
            <field name="lang">	{{user.lang }}</field>
            <field name="email_to">{{object.create_uid and object.create_uid.login or ''}},</field>
            <field name="body_html" type="html">
				<div style="margin: 0px; padding: 0px;">
				    <p style="margin: 0px; padding: 0px; font-size: 13px;">
				        <b>Hello <t t-out="object.create_uid.name" />,</b>
				        <br/>
				        Your Government Payment <t t-out="object.name" />  has been <t t-out="ctx.get('state', '')"/>.
				        <br/>
				        Thank You
				    </p>
				</div>
            </field>
        </record>
    </data>
</odoo>
