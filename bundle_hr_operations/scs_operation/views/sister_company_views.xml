<odoo>

    <record id="sister_company_tree_view" model="ir.ui.view">
        <field name="name">sister.company.tree.view</field>
        <field name="model">sister.company</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sponsorship_number"/>
            </tree>
        </field>
    </record>

    <record id="sister_company_form_view" model="ir.ui.view">
        <field name="name">sister.company.form.view</field>
        <field name="model">sister.company</field>
        <field name="arch" type="xml">
            <form name="basic_infos">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sponsorship_number"/>>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sister_company_action" model="ir.actions.act_window">
        <field name="name">Sister companies</field>
        <field name="res_model">sister.company</field>
        <field name="view_mode">tree,form</field>
    </record>



</odoo>