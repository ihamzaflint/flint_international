<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="scs_operation.view_attachment_form_inherit" model="ir.ui.view">
        <field name="name">scs_operation view_attachment_form_inherit</field>
        <field name="model">ir.attachment</field>
        <field name="inherit_id" ref="base.view_attachment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mimetype']" position="after">
                <button name="run_attachment_script" type="object" string="Run Script"/>
            </xpath>

        </field>
    </record>

</odoo>