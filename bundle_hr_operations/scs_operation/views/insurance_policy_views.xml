<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Insurance Policy Tree View -->
    <record id="insurance_policy_tree_view" model="ir.ui.view">
        <field name="name">insurance.policy.tree</field>
        <field name="model">insurance.policy</field>
        <field name="arch" type="xml">
            <tree string="Insurance Policies" decoration-info="state == 'draft'" decoration-success="state == 'active'" decoration-muted="state == 'expired'" decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="policy_number"/>
                <field name="insurance_company_id"/>
                <field name="date_start"/>
                <field name="date_end"/>
                <field name="total_employees"/>
                <field name="total_annual_cost" widget="monetary"/>
                <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'active'" decoration-muted="state == 'expired'" decoration-danger="state == 'cancelled'"/>
            </tree>
        </field>
    </record>

    <!-- Insurance Policy Form View -->
    <record id="insurance_policy_form_view" model="ir.ui.view">
        <field name="name">insurance.policy.form</field>
        <field name="model">insurance.policy</field>
        <field name="arch" type="xml">
            <form string="Insurance Policy">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="oe_highlight" 
                            invisible="state != 'draft'" help="Activate this insurance policy"/>
                    <button name="action_expire" string="Expire" type="object" 
                            invisible="state != 'active'" help="Mark this policy as expired"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state != 'draft' and state != 'active'" help="Cancel this insurance policy"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,expired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g., Annual Health Insurance 2024"/>
                            <field name="policy_number" placeholder="e.g., POL-2024-001"/>
                            <field name="insurance_company_id"/>
                        </group>
                        <group>
                            <field name="date_start"/>
                            <field name="date_end"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Employee Coverage" name="employee_coverage">
                            <field name="employee_insurance_line_ids" readonly="state != 'draft'">
                                <tree string="Employee Insurance Lines" editable="bottom">
                                    <field name="name"/>
                                    <field name="employee_id"/>
                                    <field name="passenger_type"/>
                                    <field name="family_member_id"/>
                                    <field name="insurance_class"/>
                                    <field name="date_added"/>
                                    <field name="date_removed"/>
                                    <field name="annual_cost" widget="monetary"/>
                                    <field name="prorated_cost" widget="monetary"/>
                                    <field name="refund_amount" widget="monetary"/>
                                    <field name="state" widget="badge"/>
                                    <field name="action_type"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Insurance Classes" name="insurance_classes">
                            <field name="insurance_class_ids"/>
                        </page>
                        <page string="Summary" name="summary">
                            <group>
                                <group>
                                    <field name="total_employees"/>
                                    <field name="total_annual_cost" widget="monetary"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add any additional notes here..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Insurance Policy Search View -->
    <record id="insurance_policy_search_view" model="ir.ui.view">
        <field name="name">insurance.policy.search</field>
        <field name="model">insurance.policy</field>
        <field name="arch" type="xml">
            <search string="Search Insurance Policies">
                <field name="name"/>
                <field name="policy_number"/>
                <field name="insurance_company_id"/>
                <separator/>
                <filter domain="[('state', '=', 'draft')]" name="draft" string="Draft"/>
                <filter domain="[('state', '=', 'active')]" name="active" string="Active"/>
                <filter domain="[('state', '=', 'expired')]" name="expired" string="Expired"/>
                <filter domain="[('state', '=', 'cancelled')]" name="cancelled" string="Cancelled"/>
                <separator/>
                <filter domain="[('date_start', '>=', context_today())]" name="current" string="Current"/>
                <filter domain="[('date_end', '&lt;', context_today())]" name="expired" string="Expired"/>
                <group expand="0" string="Group By">
                    <filter context="{'group_by': 'state'}" name="group_state" string="Status"/>
                    <filter context="{'group_by': 'insurance_company_id'}" name="group_company" string="Insurance Company"/>
                    <filter context="{'group_by': 'date_start:month'}" name="group_date" string="Start Date"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Insurance Policy Action -->
    <record id="action_insurance_policy" model="ir.actions.act_window">
        <field name="name">Insurance Policies</field>
        <field name="res_model">insurance.policy</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="insurance_policy_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first insurance policy!
            </p>
            <p>
                Insurance policies define the coverage terms and costs for employees and their families.
                You can manage different insurance classes and their associated costs.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_insurance_policy" 
              name="Insurance Policies" 
              parent="scs_operation.root_operation_configration"
              action="action_insurance_policy" 
              sequence="15"/>

    <!-- Employee Insurance Line Tree View -->
    <record id="employee_insurance_line_tree_view" model="ir.ui.view">
        <field name="name">employee.insurance.line.tree</field>
        <field name="model">employee.insurance.line</field>
        <field name="arch" type="xml">
            <tree string="Employee Insurance Lines" decoration-info="state == 'draft'" decoration-success="state == 'active'" decoration-muted="state == 'ended'" decoration-danger="state == 'cancelled'">
                <field name="name"/>
                <field name="policy_id"/>
                <field name="employee_id"/>
                <field name="passenger_type"/>
                <field name="family_member_id"/>
                <field name="insurance_class"/>
                <field name="date_added"/>
                <field name="date_removed"/>
                <field name="annual_cost" widget="monetary"/>
                <field name="prorated_cost" widget="monetary"/>
                <field name="refund_amount" widget="monetary"/>
                <field name="state" widget="badge"/>
                <field name="action_type"/>
            </tree>
        </field>
    </record>

    <!-- Employee Insurance Line Form View -->
    <record id="employee_insurance_line_form_view" model="ir.ui.view">
        <field name="name">employee.insurance.line.form</field>
        <field name="model">employee.insurance.line</field>
        <field name="arch" type="xml">
            <form string="Employee Insurance Line">
                <header>
                    <button name="action_activate" string="Activate" type="object" class="oe_highlight" 
                            invisible="state != 'draft'" help="Activate this insurance coverage"/>
                    <button name="action_end_coverage" string="End Coverage" type="object" 
                            invisible="state != 'active'" help="End this insurance coverage"/>
                    <button name="action_cancel" string="Cancel" type="object" 
                            invisible="state != 'draft' and state != 'active'" help="Cancel this insurance coverage"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,ended"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="policy_id"/>
                            <field name="employee_id"/>
                            <field name="passenger_type"/>
                            <field name="family_member_id"/>
                            <field name="insurance_class"/>
                        </group>
                        <group>
                            <field name="date_added"/>
                            <field name="date_removed"/>
                            <field name="action_type"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="company_id" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="annual_cost" widget="monetary"/>
                            <field name="prorated_cost" widget="monetary"/>
                            <field name="refund_amount" widget="monetary"/>
                            <field name="days_covered"/>
                        </group>
                        <group>
                            <field name="bill_id" readonly="1"/>
                            <field name="refund_id" readonly="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Add any additional notes here..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Employee Insurance Line Action -->
    <record id="action_employee_insurance_line" model="ir.actions.act_window">
        <field name="name">Employee Insurance Lines</field>
        <field name="res_model">employee.insurance.line</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first employee insurance line!
            </p>
            <p>
                Employee insurance lines track individual coverage for employees and their families.
                You can manage coverage periods, costs, and billing information.
            </p>
        </field>
    </record>

    <!-- Menu Item for Employee Insurance Lines -->
    <menuitem id="menu_employee_insurance_line" 
              name="Employee Insurance Lines" 
              parent="scs_operation.root_operation_configration"
              action="action_employee_insurance_line" 
              sequence="20"/>
</odoo> 