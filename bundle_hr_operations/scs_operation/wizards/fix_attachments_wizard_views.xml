<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_fix_attachments_wizard_form" model="ir.ui.view">
        <field name="name">fix.attachments.wizard.form</field>
        <field name="model">fix.attachments.wizard</field>
        <field name="arch" type="xml">
            <form string="Fix Orphaned Attachments">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="description" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_fix_orphaned_attachments" 
                            string="Fix Orphaned Attachments" 
                            type="object" 
                            class="btn-primary"/>
                    <button string="Cancel" 
                            class="btn-secondary" 
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_fix_attachments_wizard" model="ir.actions.act_window">
        <field name="name">Fix Orphaned Attachments</field>
        <field name="res_model">fix.attachments.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo> 