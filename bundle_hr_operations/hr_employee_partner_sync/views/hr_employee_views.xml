<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add sync button to employee form view -->
    <record id="view_employee_form_inherit_sync" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit.sync</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_sync_with_partners" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-refresh"
                        string="Sync Partner"/>
            </xpath>
        </field>
    </record>

    <!-- Server action to sync all employees -->
    <record id="action_sync_all_employees" model="ir.actions.server">
        <field name="name">Sync All Employees with Partners</field>
        <field name="model_id" ref="hr.model_hr_employee"/>
        <field name="binding_model_id" ref="hr.model_hr_employee"/>
        <field name="state">code</field>
        <field name="code">model.sync_all_employees_with_partners()</field>
    </record>
</odoo>
