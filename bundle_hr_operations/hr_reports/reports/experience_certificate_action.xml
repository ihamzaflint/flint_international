<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_reports.experience_certificate_paperformat" model="report.paperformat">
        <field name="name">Experience Certificate Report</field>
        <field name="default" eval="False"/>
        <field name="dpi">90</field>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="header_spacing">15</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">20</field>
        <field name="margin_right">20</field>
    </record>

      <record id="hr_reports.action_experience_certificate_report" model="ir.actions.report">
        <field name="name">Experience Certificate</field>
        <field name="model">experience.certificate</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_reports.experience_certificate_report_template</field>
        <field name="report_file">hr_reports.experience_certificate_report_template</field>
        <field name="binding_model_id" ref="hr_reports.model_experience_certificate"/>
        <field name="paperformat_id" ref="hr_reports.experience_certificate_paperformat"/>
    </record>
</odoo>