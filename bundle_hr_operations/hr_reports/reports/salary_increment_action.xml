<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Paper Format -->
    <record id="hr_reports.salary_increment_paperformat" model="report.paperformat">
        <field name="name">Salary Increment Report Format</field>
        <field name="default" eval="False"/>
        <field name="dpi">90</field>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="header_spacing">15</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">20</field>
        <field name="margin_right">20</field>
    </record>

    <!-- Report Action -->
    <record id="hr_reports.action_salary_increment_report" model="ir.actions.report">
        <field name="name">Salary Increment</field>
        <field name="model">salary.increment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_reports.salary_increment_report_template</field>
        <field name="report_file">hr_reports.salary_increment_report_template</field>
        <field name="binding_model_id" ref="hr_reports.model_salary_increment"/>
        <field name="paperformat_id" ref="hr_reports.salary_increment_paperformat"/>
    </record>
</odoo>
