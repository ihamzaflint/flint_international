<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Paper Format  -->
    <record id="hr_reports.saudi_culture_office_paperformat" model="report.paperformat">
        <field name="name">Saudi Culture Office Report Format</field>
        <field name="default" eval="False"/>
        <field name="dpi">90</field>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="header_spacing">15</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
    </record>


    <!-- Report Action-->
    <record id="hr_reports.action_saudi_culture_office_report" model="ir.actions.report">
        <field name="name">Saudi Culture Office Report</field>
        <field name="model">saudi.culture.office</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_reports.report_saudi_culture_office_template</field>
        <field name="report_file">hr_reports.report_saudi_culture_office_template</field>
        <field name="binding_model_id" ref="hr_reports.model_saudi_culture_office"/>
        <field name="paperformat_id" ref="hr_reports.saudi_culture_office_paperformat"/>
    </record>

</odoo>
