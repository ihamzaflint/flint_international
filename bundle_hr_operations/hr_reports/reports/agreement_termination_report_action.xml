<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_reports.agreement_termination_paperformat" model="report.paperformat">
        <field name="name">Agreement Termination Report Format</field>
        <field name="default" eval="False"/>
        <field name="dpi">90</field>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="header_spacing">15</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">10</field>
        <field name="margin_right">10</field>
    </record>


    <record id="action_agreement_termination_report" model="ir.actions.report">
        <field name="name">Agreement Termination Report</field>
        <field name="model">agreement.termination</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hr_reports.agreement_termination_report_template</field>
        <field name="report_file">hr_reports.agreement_termination_report_template</field>
        <field name="binding_model_id" ref="hr_reports.model_agreement_termination"/>
        <field name="paperformat_id" ref="hr_reports.agreement_termination_paperformat"/>

    </record>
</odoo>