<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--    Form View-->
    <record id="view_contractor_access_form" model="ir.ui.view">
        <field name="name">contractor.access.form</field>
        <field name="model">contractor.access</field>
        <field name="arch" type="xml">
            <form string="Contractor Access">
                <header>
                    <button name="action_draft" string="Draft" type="object" class="btn-success"
                            invisible="state in ['draft','confirm']"/>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-secondary"
                            invisible="state in ['confirm']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group string="Company And Contract Info">
                            <field name="name" force_save="1" readonly="state in ['confirm']"/>
                            <field name="company_name" force_save="1" readonly="state in ['confirm']" />
                            <field name="cr_number" force_save="1" readonly="state in ['confirm']" />
                            <field name="contract_no" force_save="1" readonly="state in ['confirm']" />
                            <field name="contract_validity" force_save="1" readonly="state in ['confirm']" />
                            <field name="work_description" force_save="1" readonly="state in ['confirm']" />
                        </group>

                        <group string="Employee And Personal Info">
                            <field name="employee_name" force_save="1" readonly="state in ['confirm']" />
                            <field name="identity_id" force_save="1" readonly="state in ['confirm']" />
                            <field name="job_position" force_save="1" readonly="state in ['confirm']" />
                            <field name="nationality" force_save="1" readonly="state in ['confirm']" />
                            <field name="job_title" force_save="1" readonly="state in ['confirm']" />
                            <field name="signature" force_save="1" readonly="state in ['confirm']" />
                            <field name="date" force_save="1" readonly="state in ['confirm']" />
                        </group>
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_contractor_access_tree" model="ir.ui.view">
        <field name="name">contractor.access.tree</field>
        <field name="model">contractor.access</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="company_name"/>
                <field name="cr_number"/>
                <field name="employee_name"/>
                <field name="identity_id"/>
                <field name="job_position"/>
                <field name="nationality"/>
                <field name="contract_no"/>
                <field name="contract_validity"/>
                <field name="work_description"/>
                <field name="job_title"/>
                <field name="signature"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="action_contractor_access" model="ir.actions.act_window">
        <field name="name">Contractor Access</field>
        <field name="res_model">contractor.access</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>