<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--    Form View-->
    <record id="view_clearance_certificate_form" model="ir.ui.view">
        <field name="name">clearance.certificate.form</field>
        <field name="model">clearance.certificate</field>
        <field name="arch" type="xml">
            <form string="Clearance Certificate">
                <header>
                    <button name="action_draft" string="Draft" type="object" class="btn-success"
                            invisible="state in ['draft','confirm']"/>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-secondary"
                            invisible="state in ['confirm']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>

                    <group>
                        <field name="employee_id" readonly="state in ['confirm']" force_save="1"/>
                    </group>


                    <group name="dual_language_section" colspan="2">
                        <group string="English Section" name="english_section">
                            <field name="name" readonly="state in ['confirm']" force_save="1"/>
                        </group>

                        <group string="Arabic Section" name="arabic_section">
                            <field name="name_ar" readonly="state in ['confirm']" force_save="1"/>
                        </group>
                    </group>


                    <group colspan="2">
                        <group string="Common Information" name="common_info">
                            <field name="project_id" readonly="state in ['confirm']" force_save="1"/>
                            <field name="company_id" readonly="state in ['confirm']" force_save="1"/>
                            <field name="actual_job_role" readonly="state in ['confirm']" force_save="1"/>
                            <field name="id_number" readonly="state in ['confirm']" force_save="1"/>
                            <field name="status" readonly="state in ['confirm']" force_save="1"/>
                        </group>

                        <group string="Contract Dates" name="contract_dates">
                            <field name="start_date" readonly="state in ['confirm']" force_save="1"/>
                            <field name="end_date" readonly="state in ['confirm']" force_save="1"/>
                        </group>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_clearance_certificate_tree" model="ir.ui.view">
        <field name="name">clearance.certificate.tree</field>
        <field name="model">clearance.certificate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="name"/>
                <field name="name_ar"/>
                <field name="project_id"/>
            </tree>
        </field>
    </record>

    <record id="action_clearance_certificate" model="ir.actions.act_window">
        <field name="name">Clearance Certificate</field>
        <field name="res_model">clearance.certificate</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>