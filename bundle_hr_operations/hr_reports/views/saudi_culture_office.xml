<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--    Form View-->
    <record id="view_saudi_culture_office_form" model="ir.ui.view">
        <field name="name">saudi.culture.office.form</field>
        <field name="model">saudi.culture.office</field>
        <field name="arch" type="xml">
            <form string="Saudi Culture Office">
                <header>
                    <button name="action_draft" string="Draft" type="object" class="btn-success"
                            invisible="state in ['draft','confirm']"/>
                    <button name="action_confirm" string="Confirm" type="object" class="btn-secondary"
                            invisible="state in ['confirm']"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <!-- Employee Selection -->
                    <group>
                        <field name="employee_id" readonly="state in ['confirm']" force_save="1"/>
                    </group>

                    <!-- Dual Language Section -->
                    <group name="dual_language_section" colspan="2">
                        <group string="English Section" name="english_section">
                            <field name="name" readonly="state in ['confirm']" force_save="1"/>
                        </group>

                        <group string="Arabic Section" name="arabic_section">
                            <field name="name_ar" readonly="state in ['confirm']" force_save="1"/>
                        </group>
                    </group>

                    <!-- Common Information -->
                    <group colspan="2">
                        <group string="Common Information" name="common_info">
                            <field name="id_number" readonly="state in ['confirm']" force_save="1"/>
                            <field name="passport_number" readonly="state in ['confirm']" force_save="1"/>
                            <field name="actual_job_role" readonly="state in ['confirm']" force_save="1"/>
                            <field name="file_number" readonly="state in ['confirm']" force_save="1"/>
                            <field name="identification_id" readonly="state in ['confirm']" force_save="1"/>
                            <field name="nationality" readonly="state in ['confirm']" force_save="1"/>
                        </group>

                        <!-- Contract Dates -->
                        <group string="Contract Dates" name="contract_dates">
                            <field name="start_date" readonly="state in ['confirm']" force_save="1"/>
                            <field name="end_date" readonly="state in ['confirm']" force_save="1"/>
                        </group>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_saudi_culture_office_tree" model="ir.ui.view">
        <field name="name">saudi.culture.office.tree</field>
        <field name="model">saudi.culture.office</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="name"/>
                <field name="name_ar"/>
                <field name="id_number"/>
                <field name="passport_number"/>
            </tree>
        </field>
    </record>

    <record id="action_saudi_culture_office" model="ir.actions.act_window">
        <field name="name">Saudi Culture Office</field>
        <field name="res_model">saudi.culture.office</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>