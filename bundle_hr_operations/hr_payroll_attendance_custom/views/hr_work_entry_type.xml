<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payroll_hr_work_entry_type_view_form_inherit_calc_rate" model="ir.ui.view">
        <field name="name">payroll.hr.work.entry.type.view.form.inherit.calc_rate</field>
        <field name="model">hr.work.entry.type</field>
        <field name="inherit_id" ref="hr_work_entry_contract.hr_work_entry_contract_type_view_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_leave']" position="after">
                <field name="is_calculation"/>
            </xpath></field>
    </record>
    <record id="hr_work_entry_type_view_form" model="ir.ui.view">
        <field name="name">hr.work.entry.type.form</field>
        <field name="model">hr.work.entry.type</field>
        <field name="inherit_id" ref="hr_work_entry.hr_work_entry_type_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sequence']" position="after">
                <field invisible="is_calculation == False" name="calc_rate"/>
            </xpath></field>
    </record>
</odoo>
