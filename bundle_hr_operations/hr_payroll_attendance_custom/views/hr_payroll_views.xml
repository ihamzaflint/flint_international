<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_payslip_form_view_custom" model="ir.ui.view">
        <field name="name">hr.payslip.form.custom</field>
        <field name="model">hr.payslip</field>
        <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
        <field name="arch" type="xml">
            <group name="accounting" position="after">
                <group name="attendance_summary" string="Attendance Summary">
                    <field colspan="2" name="attendance_summary_ids" nolabel="1" readonly="attendance_summary_ids != False"/>
                    <field name="date_from" readonly="state in ['done', 'paid']"/>
                    <field name="date_to" readonly="state in ['done', 'paid']"/>
                    <field name="journal_id" readonly="state in ['done', 'paid']"/>
                    <field name="attendance_line_ids" readonly="state in ['done', 'paid']"/>
                </group>
            </group>
            <xpath expr="//field[@name='worked_days_line_ids']/tree/field[@name='amount']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='worked_days_line_ids']/form//field[@name='amount']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='worked_days_line_ids']/form//field[@name='amount']" position="after">
                <field name="calc_rate"/>
            </xpath>
        </field>
    </record>
