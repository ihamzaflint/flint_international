<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="hr_payslip_run_custom_form_view">
        <field name="name">hr.payslip.run.custom.form.view</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='date_end']" position="after">
                <field name="date_start" readonly="state != 'draft'"/>
                <field name="date_end" readonly="state != 'draft'"/>
                <field name="journal_id" readonly="state != 'draft'"/>
            </xpath>
        </field>

    </record>
</odoo>