<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!-- <data noupdate="1"> -->

    <record id="hr_attendance_summary_comp_rule" model="ir.rule">
        <field name="name">HR Attendance Summary multi company rule</field>
        <field name="model_id" ref="model_hr_attendance_summary"/>
        <field name="global" eval="True"/>
        <field name="domain_force">['|',('company_id','=',False),('company_id','child_of',[user.company_id.id])]</field>
    </record>
    
    <function name="write" model="ir.model.data">
        <function name="search" model="ir.model.data">
            <value eval="[('module', '=', 'hr_payroll'), ('name', '=', 'ir_rule_hr_payroll_salary_rule_multi_company')]" />
        </function>
        <value eval="{'noupdate': False}" />
    </function>


    <record id="hr_payroll.ir_rule_hr_payroll_salary_rule_multi_company" model="ir.rule">
        <field name="domain_force">['|','|',('struct_id','=', False), ('struct_id.country_id', '=', False), ('struct_id.country_id', 'in', user.env.companies.mapped('country_id').ids)]</field>
    </record>
<!-- </data> -->
</odoo>