<odoo>

    <record id="employee_degree_tree_view" model="ir.ui.view">
        <field name="name">employee.degree.tree.view</field>
        <field name="model">employee.degree</field>
        <field name="arch" type="xml">
            <tree string="Degree">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="employee_degree_form_view" model="ir.ui.view">
        <field name="name">employee.degree.form.view</field>
        <field name="model">employee.degree</field>
        <field name="arch" type="xml">
            <form string="Degree">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="True"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="employee_degree_action" model="ir.actions.act_window">
        <field name="name">Degree</field>
        <field name="res_model">employee.degree</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="employee_degree_menu_item"
        name="Degree"
        parent="hr.menu_human_resources_configuration"
        action="employee_degree_action"/>

</odoo>