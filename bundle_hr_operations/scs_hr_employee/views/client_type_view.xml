<odoo>

    <record id="client_type_tree_view" model="ir.ui.view">
        <field name="name">client.type.tree.view</field>
        <field name="model">client.type</field>
        <field name="arch" type="xml">
            <tree string="Client Type">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="client_type_form_view" model="ir.ui.view">
        <field name="name">client.type.form.view</field>
        <field name="model">client.type</field>
        <field name="arch" type="xml">
            <form string="Client Type" name="client_type">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="True"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="client_type_action" model="ir.actions.act_window">
        <field name="name">Client Type</field>
        <field name="res_model">client.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="client_type_menu_item" 
            name="Client Type"
            parent="hr.menu_human_resources_configuration"
            action="client_type_action"/>

</odoo>