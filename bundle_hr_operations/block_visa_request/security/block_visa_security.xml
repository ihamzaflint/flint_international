<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="module_category_block_visa" model="ir.module.category">
        <field name="name">Block Visa</field>
        <field name="sequence">20</field>
    </record>

    <record id="group_visa_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_block_visa"/>
    </record>

    <record id="group_visa_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_block_visa"/>
        <field name="implied_ids" eval="[(4, ref('group_visa_user'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="rule_block_visa_request_user" model="ir.rule">
        <field name="name">Block Visa Request: User can only see their own requests</field>
        <field name="model_id" ref="model_block_visa_request"/>
        <field name="domain_force">[('create_uid', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_visa_user'))]"/>
    </record>

    <record id="rule_block_visa_request_manager" model="ir.rule">
        <field name="name">Block Visa Request: Manager can see all requests</field>
        <field name="model_id" ref="model_block_visa_request"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_visa_manager'))]"/>
    </record>
</odoo>