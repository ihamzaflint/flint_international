    <!-- Send for Approval (only in state=verify) -->
    <record id="hr_payroll_approver.action_send_for_approval_server" model="ir.actions.server">
        <field name="name">Send for Approval</field>
        <field name="model_id" ref="model_hr_payslip_run"/>
        <field name="binding_model_id" ref="model_hr_payslip_run"/>
        <field name="binding_type">action</field>
        <field name="state">code</field>
        <field name="code">
            records.action_send_for_approval()
        </field>
    </record>

