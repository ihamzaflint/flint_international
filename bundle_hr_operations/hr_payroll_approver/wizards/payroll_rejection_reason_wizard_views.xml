<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="payroll_rejection_reason_wizard_form" model='ir.ui.view'>
            <field name="name">Payroll Rejection Reason Wizard</field>
            <field name="model">payroll.rejection.reason.wizard</field>
            <field name="arch" type="xml">
                <form string="Rejection Reason">
                    <group>
                        <field name="rejection_reason" />
                    </group>
                    <footer>
                        <button name="action_reject" type="object" class="btn-primary" string="Confirm Rejection" />
                        <button name="cancel" type="object" class="btn-secondary" string="Cancel"
                        special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>