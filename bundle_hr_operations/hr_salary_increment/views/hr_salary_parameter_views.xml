<?xml version="1.0" encoding="utf-8" ?>
<odoo>

        <record id="view_hr_salary_parameter_search" model="ir.ui.view">
            <field name="name">view.hr.salary.parameter.search</field>
            <field name="model">hr.salary.parameter</field>
            <field name="arch" type="xml">
                <search string="Salary Parameter">
                    <field name="name"/>
                    <field name="field_id"/>
                    <field name="sequence"/>
                </search>
            </field>
        </record>

    <record id="view_hr_salary_parameter_tree" model="ir.ui.view">
        <field name="name">view.hr.salary.parameter.tree</field>
        <field name="model">hr.salary.parameter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name" optional="show"/>
                <field name="field_id" optional="show"/>
            </tree>
        </field>
    </record>

    <record id="view_hr_salary_parameter_form" model="ir.ui.view">
        <field name="name">view.hr.salary.form</field>
        <field name="model">hr.salary.parameter</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" optional="show"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="field_id"
                                   options="{'no_create_edit' : True, 'no_create' : True, 'no_open' : True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_salary_parameter" model="ir.actions.act_window">
        <field name="name">Salary Parameter</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.salary.parameter</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="hr_salary_increment.view_hr_salary_parameter_search"/>
    </record>

    <menuitem id="menu_salary_parameter" name="Salary Parameter" sequence="201"
              parent="hr_payroll.menu_hr_salary_configuration"
              action="action_hr_salary_parameter"/>

</odoo>