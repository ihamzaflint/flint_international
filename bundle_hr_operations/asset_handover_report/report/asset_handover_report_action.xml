<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Paper Format for Asset Handover Form -->
    <record id="asset_handover_report.employee_device_paperformat" model="report.paperformat">
        <field name="name">Asset Handover Report Format</field>
        <field name="default" eval="False"/>
        <field name="dpi">90</field>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">10</field>
        <field name="header_spacing">15</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
    </record>

    <!-- Report Action -->
    <record id="asset_handover_report.action_employee_device_report" model="ir.actions.report">
        <field name="name">Asset Handover Form</field>
        <field name="model">employee.asset.handover</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">asset_handover_report.employee_device_template</field>
        <field name="report_file">asset_handover_report.employee_device_template</field>
        <field name="binding_model_id" ref="asset_handover_report.model_employee_asset_handover"/>
        <field name="paperformat_id" ref="asset_handover_report.employee_device_paperformat"/>
    </record>
</odoo>
