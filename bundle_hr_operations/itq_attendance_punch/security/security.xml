<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="itq_attendance_punch_category" model="ir.module.category">
            <field name="name">Attendance Punch</field>
        </record>
        <record id="itq_attendance_punch_user_group" model="res.groups">
           <field name="name">User</field>
           <field name="category_id" ref="itq_attendance_punch_category"/>
        </record>
        <record id="itq_attendance_punch_admin_group" model="res.groups">
           <field name="name">Admin</field>
           <field name="category_id" ref="itq_attendance_punch_category"/>
           <field name="implied_ids" eval="[(4, ref('itq_attendance_punch_user_group'))]"/>
           <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>
    </data>

    <data noupdate="1">
        <record id="attendance_punch_write_rule" model="ir.rule">
            <field name="name">disable delete/write on transferred records</field>
            <field ref="model_itq_attendance_punch" name="model_id"/>
            <field name="domain_force">[('transfer', '=', False)]</field>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>

</odoo>