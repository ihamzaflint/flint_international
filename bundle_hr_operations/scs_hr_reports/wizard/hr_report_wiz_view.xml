<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_template_report_wiz_form_view" model="ir.ui.view">
        <field name="name">hr.template.report.wiz.form.view</field>
        <field name="model">hr.template.report.wiz</field>
        <field name="arch" type="xml">
            <form string="HR Templates">
                <group>
                    <field name="employee_id" required="1"/>
                    <field name="report_template" required="1"/>
                    <field invisible="[('report_template', 'not in', ['salary_transfer_from', 'salary_introduction_letter', 'employment_letter'])]" name="letter_purpose"/>
                    <field invisible="report_template not in ['mobility_entry_permit', 'bank_letter_outside_kingdom', 'bank_loan_request']" name="address_to_whom"/>
                    <field invisible="report_template not in ['mobility_entry_permit', 'stc_entry_permit', 'salary_introduction_letter']" name="address_to_whom_arabic"/>
                    <field invisible="not report_template" name="contract_no"/>
                    <field invisible="not report_template" name="contract_validity_date"/>
                    <field invisible="not report_template" name="authorised_emp_id"/>
                    <field invisible="not report_template" name="commerical_registration_no"/>
                    <field invisible="not report_template" name="comm_reg_number_name"/>
                    <field invisible="not report_template" name="comm_reg_number_name_arabic"/>
                    <field invisible="not report_template" name="company_name"/>
                    <field invisible="report_template not in ['experience_certificate', 'disclaimer']" name="company_name_arabic"/>
                    <field invisible="report_template not in ['salary_introduction_letter', 'employment_letter']" name="total_salary"/>
                    <field invisible="report_template not in ['salary_introduction_letter', 'employment_letter']" name="total_gross_sal"/>
                    <field invisible="report_template not in ['salary_introduction_letter', 'employment_letter']" name="sal_in_words"/>
                    <field invisible="not report_template" name="residence_number"/>
                    <field invisible="not report_template" name="work_position"/>
                    <field invisible="not report_template" name="job_contract"/>
                    <field invisible="not report_template" name="renew_contract"/>
                    <field invisible="not report_template" name="contract_expiry_date"/>
                    <field invisible="not report_template" name="article_detail"/>
                    <field invisible="not report_template" name="artical_detail_arabic"/>
                    <field invisible="not report_template" name="probation_extend_date"/>
                    <field invisible="not report_template" name="leave_type" required="report_template"/>
                    <field invisible="not report_template" name="leave_from_date" required="report_template"/>
                    <field invisible="not report_template" name="leave_to_date" required="report_template"/>
                    <field invisible="not report_template" name="leave_remarks" required="report_template"/>
                    <field invisible="1" name="total_leave_days"/>
                    <field invisible="report_template not in ['attestation_certificate_1', 'attestation_certificate_3']" name="city_name_english"/>
                    <field invisible="report_template not in ['attestation_certificate_1', 'attestation_certificate_3']" name="city_name_arabic"/>
                    <field invisible="not report_template" name="muqeem_profession"/>
                    <field invisible="not report_template" name="embassy_id" widget="selection"/>
                </group>
                <notebook>
                    <page invisible="not report_template" string="Responsibility Details">
                        <field name="responsibility_ids"><tree editable="bottom">
                                <field name="name" required="1"/>
                                <field name="responsibility" required="1"/>
                            </tree></field>
                    </page>
                    <page invisible="not report_template" string="Artical Details">
                        <field name="artical_detail_ids"><tree editable="bottom">
                                <field name="name" required="1"/>
                                <field name="name_arabic" required="1"/>
                            </tree></field>
                    </page>
                </notebook>
                <footer>
                    <button class="btn-primary" name="generate_template_report" string="Print" type="object"/>
                    <button class="btn-secondary" special="cancel" string="Cancel"/>
                </footer>
            </form></field>
    </record>
    <record id="action_hr_template_report_wiz" model="ir.actions.act_window">
        <field name="name">HR Templates</field>
        <field name="res_model">hr.template.report.wiz</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="hr_template_report_wiz_form_view"/>
        <field name="target">new</field>
    </record>
    <menuitem action="action_hr_template_report_wiz" id="menu_report_hr_template_wiz" name="HR Templates" parent="hr.hr_menu_hr_reports" sequence="14"/>
</odoo>
