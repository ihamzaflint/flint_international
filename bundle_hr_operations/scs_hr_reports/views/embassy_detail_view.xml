<odoo>

    <record id="embassy_detail_tree_view" model="ir.ui.view">
        <field name="name">embassy.detail.tree.view</field>
        <field name="model">embassy.detail</field>
        <field name="arch" type="xml">
            <tree string="Embassy Details">
                <field name="name"/>
                <field name="name_arabic"/>
            </tree>
        </field>
    </record>

    <record id="embassy_detail_form_view" model="ir.ui.view">
        <field name="name">embassy.detail.form.view</field>
        <field name="model">embassy.detail</field>
        <field name="arch" type="xml">
            <form string="Embassy">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="name_arabic" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="emabassy_detail_action" model="ir.actions.act_window">
        <field name="name">Embassy Detail</field>
        <field name="res_model">embassy.detail</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="embassy_detail_menuitem" name="Embassy" action="emabassy_detail_action" parent="hr.menu_human_resources_configuration" sequence="121"/>

</odoo>
