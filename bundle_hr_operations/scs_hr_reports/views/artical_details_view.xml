<odoo>

    <record id="artical_detail_tree_view" model="ir.ui.view">
        <field name="name">artical.detail.tree.view</field>
        <field name="model">artical.detail</field>
        <field name="arch" type="xml">
            <tree string="Artical Details">
                <field name="name"/>
                <field name="name_arabic"/>
            </tree>
        </field>
    </record>

    <record id="artical_detail_form_view" model="ir.ui.view">
        <field name="name">artical.detail.form.view</field>
        <field name="model">artical.detail</field>
        <field name="arch" type="xml">
            <form string="Artical Details">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                        <group>
                            <field name="name_arabic" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
