<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="hr_employee_doc_wizard_form" model="ir.ui.view">
        <field name="name">hr.employee.doc.wizard.form</field>
        <field name="model">hr.employee.doc.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="employee_id"/>
                    </group>
                    <group>
                        <field name="report_type"/>
                    </group>
                </group>
                <footer>
                    <button string="Get Report" name="get_report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_hr_employee_document_generator" model="ir.actions.act_window">
        <field name="name">Employee Document</field>
        <field name="res_model">hr.employee.doc.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hr_employee_document_generator"
              parent="hr_employee_doc_generator.menu_hr_employee_document_sub_root"
              action="action_hr_employee_document_generator" sequence="1" groups="group_employee_doc_generator"/>

</odoo>