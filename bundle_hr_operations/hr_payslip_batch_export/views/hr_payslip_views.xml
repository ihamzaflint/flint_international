<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_payslip_run_export_xlsx" model="ir.ui.view">
        <field name="name">hr.payslip.run.export.xlsx</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_validate']" position="after">
                <button name="export_bank_file_xlsx" string="Export Bank File (XLSX)" type="object"/>
                <button name="export_bank_file_xlsx_adjustments" string="Additional Adjustments" type="object"/>
            </xpath>
        </field>
    </record>

</odoo>
