<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="other_hr_payslip_form1" model="ir.ui.view">
        <field name="name">Other HR Payslip</field>
        <field name="model">other.hr.payslip</field>
        <field name="arch" type="xml">
            <form string="Other HR Payslip">
                <header>
                    <button class="oe_highlight" groups="hr_payroll.group_hr_payroll_user" invisible="state not in ['draft']" name="other_hr_payslip_done" string="Done" type="object"/>
                    <button invisible="state not in ['done']" name="set_draft" string="Set as Draft" type="object"/>
                    <field name="state" statusbar_visible="draft,done" widget="statusbar"/>
                </header>
                <sheet>
                    <separator string="Employee Information"/>
                    <group>
                        <group>
                            <field name="name" readonly="state != 'draft'"/>
                            <field name="employee_id" placeholder="Select Employee" readonly="state != 'draft'"/>
                            <field name="analytic_account_id" readonly="state != 'draft'"/>
                            <field force_save="1" name="department_id"/>
                            <field force_save="1" name="struct_id"/>
                            <field groups="base.group_multi_company" name="company_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                        </group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                            <field domain="['|',('struct_ids','=',False),('struct_ids','=',struct_id)]" name="adjustment_type_id" readonly="state != 'draft'"/>
                            <field force_save="1" name="operation_type" readonly="1"/>
                            <field name="calc_type" readonly="state != 'draft'"/>
                            <field invisible="calc_type != 'days'" name="no_of_days" readonly="state != 'draft'" required="calc_type == 'days'"/>
                            <field invisible="calc_type != 'days'" name="daily_wage"/>
                            <field invisible="calc_type != 'hours'" name="no_of_hours" readonly="state != 'draft'" required="calc_type == 'hours'"/>
                            <field invisible="calc_type != 'hours'" name="hourly_wage"/>
                            <field invisible="calc_type != 'percentage'" name="percentage" readonly="state != 'draft'" required="calc_type == 'percentage'"/>
                            <field invisible="calc_type != 'percentage'" name="wage"/>
                            <field name="amount" readonly="state != 'draft'" required="calc_type == 'amount'"/>
                            <!--                            <field name="payslip_id" attrs="{'invisible': [('payslip_id','=', False)]}"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group colspan="4">
                                <field name="description" nolabel="1" placeholdar="Request Description" readonly="state != 'draft'"/>
                            </group>
                        </page>
                        <page groups="base.group_no_one" string="Extra Information">
                            <group col="4" name="extra_info">
                                <field name="create_uid" readonly="1"/>
                                <field name="create_date" readonly="1"/>
                                <field name="write_uid" readonly="1"/>
                                <field name="write_date" readonly="1"/>
                                <field invisible="state != 'done'" name="approved_date" readonly="1"/>
                                <field invisible="state != 'done'" name="approved_uid" readonly="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form></field>
    </record>
    <record id="other_hr_payslip_tree" model="ir.ui.view">
        <field name="name">Other.deduction.tree</field>
        <field name="model">other.hr.payslip</field>
        <field name="arch" type="xml">
            <tree decoration-info="state == 'draft'" decoration-muted="state == 'done'" string="Adjustments">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="operation_type"/>
                <field name="amount"/>
                <field name="date"/>
                <!--                <field name="payslip_id"/>-->
                <field name="state"/>
            </tree></field>
    </record>
    <record id="view_other_hr_payslip_filter" model="ir.ui.view">
        <field name="name">other.hr.payslip.filter</field>
        <field name="model">other.hr.payslip</field>
        <field name="arch" type="xml">
            <search string="Search Other Allowances/Deduction">
                <field name="employee_id"/>
                <separator/>
                <filter domain="[('state','=','draft')]" icon="terp-check" name="filter_approve" string="To Approve"/>
                <filter domain="[('state','=','done')]" icon="terp-camera_test" name="filter_done" string="Done"/>
                <separator/>
                <group expand="0" string="Group By...">
                    <filter context="{'group_by':'employee_id'}" name="group_name" string="Employee"/>
                    <filter context="{'group_by':'operation_type'}" icon="terp-personal" name="group_request" string="Type"/>
                    <filter context="{'group_by':'department_id','set_visible':True}" icon="terp-personal+" name="group_department" string="Department"/>
                    <filter context="{'group_by':'state'}" icon="terp-stock_effects-object-colorize" name="group_status" string="Status"/>
                </group>
            </search></field>
    </record>
    <record id="action_other_hr_payslip_done" model="ir.actions.server">
        <field name="name">Done</field>
        <field name="model_id" ref="hr_allowance_deduction.model_other_hr_payslip"/>
        <field name="binding_model_id" ref="hr_allowance_deduction.model_other_hr_payslip"/>
        <field name="state">code</field>
        <field name="code">action = records.other_hr_payslip_done()</field>
    </record>
    <record id="action_other_hr_payslip" model="ir.actions.act_window">
        <field name="name">Adjustments</field>
        <field name="res_model">other.hr.payslip</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_name':1}</field>
    </record>
    <!--            parent="hr_work_entry_contract.menu_hr_payroll_root"-->
    <menuitem action="action_other_hr_payslip" groups="hr_payroll.group_hr_payroll_user" id="menu_hr_payroll" name="Adjustments" parent="hr_work_entry_contract_enterprise.menu_hr_payroll_root" sequence="65"/>
    <record id="form_other_hr_payslip_type" model="ir.ui.view">
        <field name="name">other.hr.payslip.type.form</field>
        <field name="model">other.hr.payslip.type</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div class="oe_title">
                        <label class="oe_edit_only" for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="mode"/>
                            <field name="rule_id"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                        <group>
                            <field colspan="4" name="struct_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form></field>
    </record>
    <record id="action_other_hr_payslip_type" model="ir.actions.act_window">
        <field name="name">Adjustment Types</field>
        <field name="res_model">other.hr.payslip.type</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>
    <menuitem action="action_other_hr_payslip_type" groups="hr_payroll.group_hr_payroll_user" id="menu_other_hr_payslip_type" name="Adjustment Types" parent="hr_payroll.menu_hr_salary_configuration" sequence="200"/>
</odoo>
