<odoo>
  <data>

    <record id="hr_payslip_run_form_offcycle_batch" model="ir.ui.view">
        <field name="name">hr.payslip.run.form.offcycle.batch</field>
        <field name="model">hr.payslip.run</field>
        <field name="inherit_id" ref="hr_payroll.hr_payslip_run_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='country_code']" position="after">
              <field name="final_settlement_batch" readonly = "[('state','!=','draft')]"/>
            </xpath>
        </field>
    </record>

  </data>
</odoo>