<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_expense_extend.view_account_journal_form" model="ir.ui.view">
        <field name="name">hr_expense_extend view_account_journal_form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='type']" position="after">
                <field name="is_petty_cash" invisible="type != 'cash'"/>
                <field name="petty_cash_limit" invisible="type != 'cash'"/>
                <field name="petty_cash_user_ids" widget="many2many_tags" invisible="type != 'cash'"/>
            </xpath>
        </field>
    </record>
</odoo>
