<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_expense_extend.view_account_payment_register_form" model="ir.ui.view">
        <field name="name">hr_expense_extend view_account_payment_register_form</field>
        <field name="model">account.payment.register</field>
        <field name="inherit_id" ref="account.view_account_payment_register_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="is_petty_journal" invisible="1"/>
                <field name="petty_cash_limit" invisible="is_petty_journal != True"/>
            </xpath>
        </field>
    </record>
</odoo>