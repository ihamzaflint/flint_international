<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="requisition_form.purchase_order_form" model="ir.ui.view">
        <field name="name">requisition_form purchase_order_form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="requisition_form_id" force_save="1" invisible="requisition_form_id == False" readonly="1"/>
            </xpath>
        </field>
    </record>
</odoo>
