<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_approval_config_tree" model="ir.ui.view">
        <field name="name">purchase.approval.config.tree</field>
        <field name="model">purchase.approval.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
                <field name="product_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- Form View for Config -->
    <record id="view_purchase_approval_config_form" model="ir.ui.view">
        <field name="name">purchase.approval.config.form</field>
        <field name="model">purchase.approval.config</field>
        <field name="arch" type="xml">
            <form string="Purchase Approval Config">
                <!-- Header: Request Approval Button -->
                <header>
                    <button name="button_confirm" type="object" class="btn-primary" string="Confirm"
                            invisible="state == 'confirm'"/>
                    <button name="button_draft" type="object" class="btn-secondary" string="Reset to Draft"
                            invisible="state == 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name" force_save="1" readonly="state == 'confirm'"/>
                            <field name="product_ids" widget="many2many_tags" force_save="1" readonly="state == 'confirm'"/>
                        </group>
                        <group>
                            <field name="code" force_save="1" readonly="state == 'confirm'"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approval Lines">
                            <field name="purchase_approval_line_ids" readonly="state == 'confirm'">
                                <tree editable="bottom">
                                    <field name="approver_id"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_purchase_approval_config" model="ir.actions.act_window">
        <field name="name">Purchase Approval Config</field>
        <field name="res_model">purchase.approval.config</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>