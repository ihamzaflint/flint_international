                                <td style="border: 1px solid black;text-align:left;   padding:4px"
                                    class="table-border-bottom-left-right-top">
                                    <p class="m-0" t-field="o.analytic_account_id"/>
                                </td>
                                <td style="background:none;    text-align:center; padding:4px"></td>
                                <td style="border: 1px solid black;text-align:right;   padding:4px"
                                    class="table-border-bottom-left-right-top">
