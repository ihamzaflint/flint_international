                                <!--                            <span t-esc="'{:,}'.format(o.get_untaxed_amount_without_adjustment())"/> <span t-field="o.currency_id.name"/>-->
                                <span t-esc="(o.get_untaxed_amount_without_adjustment())"
                                      t-options="{'widget': 'float', 'precision': 2}"/> 
                                <span t-field="o.currency_id.name"/>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-left" style="border: 1px solid black; padding: 2px;" width="85%">
                                <strong>VAT (15% from the total invoice amount)</strong>
                                <span style="font-family:DroidKufiRegular">
                                    <strong>15% ضريبة القيمة المضافة</strong>
                                </span>
                            </td>
                            <td class="text-right" style="border: 1px solid black; padding: 2px;" width="15%">
                                <!--                            <span t-esc="o.amount_tax" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>-->
                                <!--                            <span t-esc="'{:,}'.format(o.amount_tax)"/> <span t-field="o.currency_id.name"/>-->
                                <span t-esc="o.amount_tax" t-options="{'widget': 'float', 'precision': 2}"/> 
                                <span t-field="o.currency_id.name"/>
                            </td>
                        </tr>
                        <t t-set="adjustment_amount_calc" t-value="o.adjustment_amount_calc"/>
                        <t t-if="adjustment_amount_calc!=0.0">
                            <tr>
                                <td class="text-left" style="border: 1px solid black; padding: 2px;" width="85%">
                                    <strong>Adjustment</strong>/
                                    <span style="font-family:DroidKufiRegular">
                                        <strong>تعديل</strong>
                                    </span>
                                </td>
                                <td class="text-right" style="border: 1px solid black; padding: 2px;" width="15%">
                                    <span t-esc="'{:,}'.format(o.adjustment_amount_calc)"/> 
                                    <span t-field="o.currency_id.name"/>
                                </td>
                            </tr>
                        </t>
                        <tr>
                            <td class="text-left" style="border: 1px solid black; padding: 2px;" width="85%">
                                <strong>Total invoice including VAT</strong>
                                <span style="font-family:DroidKufiRegular">
                                    <strong>إجمالي الفاتورة شاملا ضريبة القيمة المضافة</strong>
                                </span>
                            </td>
                            <td class="text-right" style="border: 1px solid black; padding: 2px;" width="15%">
                                <!--                            <span t-esc="o.amount_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>-->
                                <span t-esc="'{:,}'.format(o.amount_total)"/> 
                                <span t-field="o.currency_id.name"/>
                            </td>
                        </tr>
                    </table>
                    <br/>

                    <div class="row" style="page-break-inside: avoid;">
