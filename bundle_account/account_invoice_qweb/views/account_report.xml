<?xml version="1.0" encoding="utf-8"?>



<odoo>
    <data>





        <!-- QWeb Reports -->









        <record id="account_invoices_tax" model="ir.actions.report">
            <field name="name">Tax Invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_invoice_qweb.report_invoice_tax_custom</field>
            <field name="report_file">account_invoice_qweb.report_invoice_tax_custom</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/', '_') + '.pdf')
            </field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
        </record>

        <!-- QWeb Reports -->
        <record id="account_invoices_stc" model="ir.actions.report">
            <field name="name">STC Invoice</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_invoice_qweb.report_invoice_stc_custom</field>
            <field name="report_file">account_invoice_qweb.report_invoice_stc_custom</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/', '_') + '.pdf')
            </field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>

        <!--        Ericson invoice-->
        <record id="account_invoices_ericson" model="ir.actions.report">
            <field name="name">Ericson Invoices</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">account_invoice_qweb.report_invoice_ericson_custom</field>
            <field name="report_file">account_invoice_qweb.report_invoice_ericson_custom</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and (
                        (object.name or 'INV').replace('/', '_') + '.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice'))]"/>
        </record>


        <template id="web.external_layout_standard">
            <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                <div class="row">
                    <div class="col-3 mb4">
                        <p t-if="o.env.context.get('stc', 0) ==1 or  o.env.context.get('ericson', 0) ==1">
                            <img t-if="o.x_mea_invoice and company.x_mealogo"
                                 t-att-src="image_data_uri(company.x_mealogo)"
                                 style="max-height: 110px; margin-top:25px;" alt="Logo"/>
                            <img t-if="not o.x_mea_invoice" t-att-src="image_data_uri(company.logo)"
                                 style="max-height: 110px;" alt="Logo"/>
                        </p>
                        <p t-if="o.env.context.get('stc', 0) !=1 and o.env.context.get('ericson', 0) !=1">
                            <img t-if="company.logo" t-att-src="image_data_uri(company.logo)"
                                 style="max-height: 110px; margin-top:25px;" alt="Logo"/>
                        </p>
                    </div>
                    <div class="col-9 text-right" style="margin-top:22px;" t-field="company.report_header" name="moto"/>
                </div>
                <div t-if="company.logo or company.report_header" class="row zero_min_height">
                    <div class="col-12">
                        <div style="border-bottom: 1px solid black;"/>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6" name="company_address" t-if="company.company_details">
                        <span t-field="company.company_details"/>
                    </div>
                </div>
            </div>

            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout {{  'o_layout_background' if company.layout_background in ['Geometric', 'Custom']  else  '' }}"
                 t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else '/base/static/img/bg_background_template.jpg' if company.layout_background == 'Geometric' else ''}});"
                 t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                 t-att-data-oe-lang="o and o.env.context.get('lang')">
                <div class="pt-5">
                    <!-- This div ensures that the address is not cropped by the header. -->
                    <t t-call="web.address_layout"/>
                </div>
                <t t-out="0"/>
            </div>

            <div t-attf-class="footer o_standard_footer o_company_#{company.id}_layout">
                <div class="text-center" style="border-top: 1px solid black;">
                    <ul class="list-inline mb4">
                        <div t-field="company.report_footer"/>
                    </ul>

                    <div t-if="report_type == 'pdf'" class="text-muted">
                        Page:
                        <span class="page"/>
                        /
                        <span class="topage"/>
                    </div>
                </div>
            </div>
        </template>
        <template id="account_report_inherit" inherit_id="l10n_gcc_invoice.arabic_english_invoice">
            <xpath expr="//table[@name='invoice_line_table']/thead" position="replace">
                <thead>
                    <tr>
                        <t t-set="colspan" t-value="6"/>
                        <th name="th_description" class="text-center">
                            <span>
                                Nature of goods or services
                            </span>
                            <br/>
                            <span>
                                طبيعة السلع أو الخدمات
                            </span>
                        </th>
                        <th name="th_priceunit"
                            class="text-center">
                            <span>
                                Unit price
                            </span>
                            <br/>
                            <span>
                                سعر الوحدة
                            </span>
                        </th>
                        <th name="th_quantity" class="text-center">
                            <span>
                                Quantity
                            </span>
                            <br/>
                            <span>
                                الكمية
                            </span>
                        </th>
                        <th name="th_subtotal" class="text-center">
                            <span>
                                Taxable Amount
                            </span>
                            <br/>
                            <span>
                                المبلغ الخاضع للضريبة
                            </span>
                        </th>
                        <th name="th_price_unit" t-if="display_discount"
                            class="text-center">
                            <span>
                                Discount
                            </span>
                            <br/>
                            <span>
                                تخفيض
                            </span>
                            <t t-set="colspan" t-value="colspan+1"/>
                        </th>
                        <th name="th_taxes"
                            class="text-center">
                            <span>
                                Tax Rate
                            </span>
                            <br/>
                            <span>
                                معدل الضريبة
                            </span>
                        </th>
                        <th name="th_tax_amount"
                            class="text-center">
                            <span>
                                Tax Amount
                            </span>
                            <br/>
                            <span>
                                قيمة الضريبة
                            </span>
                        </th>
                        <th name="th_total" class="text-center">
                            <span>
                                Item Subtotal
                                (Including VAT)
                            </span>
                            <br/>
                            <span>
                                المجموع الفرعي للبند
                                (متضمنًا ضريبة القيمة المضافة)
                            </span>
                        </th>
                    </tr>
                </thead>
            </xpath>
            <xpath expr="//table[@name='invoice_line_table']/tbody" position="replace">
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="lines"
                       t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>


                    <t t-foreach="lines" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                        />
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                        />

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                <td name="account_invoice_line_name">
                                    <t t-if="line.product_id">
                                        <t t-set="arabic_name"
                                           t-value="line.with_context(lang='ar_001').product_id.display_name"/>
                                        <t t-set="english_name"
                                           t-value="line.with_context(lang='en_US').product_id.display_name"/>

                                        <span t-field="line.product_id.display_name"
                                              t-options="{'widget': 'text'}"/>

                                        <t t-if="arabic_name != english_name">
                                            <br/>
                                            <span t-field="line.with_context(lang='ar_001').product_id.name"
                                                  style="text:right"
                                                  t-options="{'widget': 'text'}"/>
                                        </t>

                                        <t t-if="line.name != english_name and line.name != arabic_name">
                                            <br/>
                                            <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                            <t t-if="line.arabic_label">
                                                <br/>
                                                <span t-field="line.arabic_label"/>
                                            </t>
                                        </t>
                                    </t>
                                    <t t-else="">
                                        <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                        <t t-if="line.arabic_label">
                                            <br/>
                                            <span t-field="line.arabic_label"/>
                                        </t>
                                    </t>
                                </td>
                                <td class="text-right">
                                    <span class="text-nowrap" t-field="line.price_unit"/>&#160;<span
                                        t-field="o.currency_id.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="'%.2f'% line.quantity"/>
                                </td>
                                <td t-if="display_discount"
                                    class="text-right">
                                    <span class="text-nowrap" t-field="line.discount"/>
                                </td>
                                <td class="text-right o_price_total">
                                    <span class="text-nowrap" t-esc="line.price_subtotal"/>&#160;<span
                                        t-field="o.currency_id.name"/>
                                </td>
                                <td class="text-right">
                                    <span t-esc="', '.join(map(lambda x: str('%.0f'% x.amount) + '%', line.tax_ids))"
                                          id="line_tax_ids"/>
                                </td>
                                <td class="text-right">
                                    <span class="text-nowrap"
                                          t-esc="'%.2f'% line.l10n_gcc_invoice_tax_amount"/>&#160;<span
                                        t-field="o.currency_id.name"/>
                                </td>
                                <td class="text-right o_price_total">
                                    <span class="text-nowrap" t-esc="line.price_total"/>&#160;<span
                                        t-field="o.currency_id.name"/>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td colspan="99">
                                    <strong class="mr16" style="display: inline-block">Subtotal/الإجمالي الفرعي</strong>
                                    <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                    />
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </xpath>
        </template>


    </data>
</odoo>
