<odoo noupdate="1">

    <record id="account_move_notify_under_approval_mail_template" model="mail.template">
        <field name="name">Account Move: Notify under Approval</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="subject">{{object._get_email_subject_name()}} ${object.name != False and ': '+ object.name or ''} Waiting your Approval</field>
        <field name="email_to"></field>
        <field name="lang">${ctx.get('user_lang')}</field>
        <field name="auto_delete" eval="True"/>
        <field name="body_html" type="html">
            <p class="western" style="line-height: 100%">
                <font size="2" style="font-size: 10pt">
                    <span>Dear ${ctx.get('name_to')},
                    </span>
                </font>
            </p>
            <p class="western" style="line-height: 100%">
                <font size="2" style="font-size: 10pt">
                    <span >{{object._get_email_subject_name()}} number ${object.name} is waiting your approval.</span>
                </font>
            </p>
            <br/>
            <b>
                <a href="${object.get_base_url()}/mail/view?model=account.move&amp;res_id=${object.id}">View ${object.name}</a>
            </b>
            <br/>
        </field>
    </record>

