<odoo>
    <data>
        <record id="account_move_extend.view_move_form" model="ir.ui.view">
            <field name="name">account_move_extend view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//header" position="inside">
                    <button name="button_self_period_of_supply_change" type="object"
                            string="Self Change Period of Supply" invisible="1"/>
                    <button name="button_all_period_of_supply_change" type="object" string="All Change Period of Supply"
                            invisible="1"/>
                </xpath>
                <xpath expr="//group[@name='accounting_info_group']" position="inside">
                    <field name="supply_period_id" force_save="1"
                           options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_extend.view_out_invoice_tree" model="ir.ui.view">
            <field name="name">account_move_extend view_out_invoice_tree</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='amount_untaxed_signed']" position="before">
                    <field name="supply_period_id" optional="hide" string="New Period of Supply"/>
                </xpath>
                <xpath expr="//field[@name='invoice_date']" position="after">
                    <field name="invoice_payment_term_id" optional="hide"/>
                    <field name="payment_reference" optional="hide"/>
                    <field name="delivery_date" optional="hide"/>
                    <field name="ref" optional="hide"/>
                    <field name="create_uid" optional="hide"/>
                    <field name="create_date" optional="hide"/>
                    <field name="write_uid" optional="hide"/>
                    <field name="write_date" optional="hide"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
