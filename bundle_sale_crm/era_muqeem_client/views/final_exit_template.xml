<odoo>
    <template id="final_exit_template">
        <t t-call="web.html_container">
            <t t-call="web.internal_layout">
                <!-- <t t-call="report.external_layout"> -->
                <div class="page">
                    <t t-set="errorMessage" t-value=""/>
                    <t t-foreach="data" t-as="datas">
                        <t t-set="errorMessage" t-value="datas.get('en', '')"/>
                    </t>

                    <t t-if="errorMessage == 'Error in input data '">
                        <table style="text-align:center; width:100%;">
                            <thead>
                                <tr>
                                    <th style="padding: 10px;">Language</th>
                                    <th style="padding: 10px;">Message</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="datas.get('user_lang') == 'ar_001'">
                                    <tr>
                                        <td style="padding: 10px;">Arabic</td>
                                        <td style="padding: 10px;">
                                            <t t-esc="datas.get('ar', '')"/>
                                        </td>
                                    </tr>
                                </t>
                                <t t-if="datas.get('user_lang') == 'en_US'">
                                    <tr>
                                        <td style="padding: 10px;">English</td>
                                        <td style="padding: 10px;">
                                            <t t-esc="datas.get('en', '')"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </t>

                    <t t-else="">

                                <table style="text-align:center; width:100%;">
                                    <thead>
                                        <tr>
                                            <th style="padding: 10px;">ResidentName</th>
                                            <th style="padding: 10px;">iqama_number</th>
                                            <th style="padding: 10px;">PassportNumber</th>
                                            <th style="padding: 10px;">Nationality</th>
                                            <th style="padding: 10px;">Occupation</th>
                                            <th style="padding: 10px;">VisaNumber</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="data" t-as="datas">
                                            <tr>
                                                <td style="padding: 10px;">
                                                    <t t-esc="datas.get('residentName', '')"/>
                                                </td>
                                                <td style="padding: 10px;">
                                                    <t t-esc="datas.get('iqama_number', '')"/>
                                                </td>
                                                <td style="padding: 10px;">
                                                    <t t-esc="datas.get('passportNumber', '')"/>
                                                </td>
                                                <td style="padding: 10px;">
                                                    <t t-esc="datas.get('nationality', '')"/>
                                                </td>
                                                <td style="padding: 10px;">
                                                    <t t-esc="datas.get('occupation', '')"/>
                                                </td>
                                                <td style="padding: 10px;">
                                                    <t t-esc="datas.get('visaNumber', '')"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>
                </div>

            </t>
        </t>
    </template>


    <record id="final_exit_report_id" model="ir.actions.report">
        <field name="name">final_exit_wizard</field>
        <field name="model">final.exit.wizard</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">era_muqeem_client.final_exit_template</field>
        <field name="report_file">era_muqeem_client.final_exit_template</field>
        <field name="binding_model_id" ref="model_final_exit_wizard"/>
        <field name="binding_type">report</field>
    </record>
</odoo>