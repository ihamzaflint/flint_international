<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="crm_extend.crm_activity_report_view_tree" model="ir.ui.view">
        <field name="name">crm_extend crm_activity_report_view_tree</field>
        <field name="model">crm.activity.report</field>
        <field name="inherit_id" ref="crm.crm_activity_report_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="/tree" position="replace">
                <tree default_order="date desc">
                    <field name="date" optional="show"/>
                    <field name="display_name" optional="hide"/>
                    <field name="mail_activity_type_id" optional="show"/>
                    <field name="subtype_id" optional="hide"/>
                    <field name="author_id" optional="show"/>
                    <field name="body" optional="hide"/>
                    <field name="company_id" optional="hide"/>
                    <field name="partner_id" optional="hide"/>
                    <field name="country_id" optional="hide"/>
                    <field name="date_closed" optional="hide"/>
                    <field name="date_conversion" optional="hide"/>
                    <field name="date_deadline" optional="hide"/>
                    <field name="lead_create_date" optional="hide"/>
                    <field name="lead_id" optional="hide"/>
                    <field name="stage_id" optional="hide"/>
                    <field name="tag_ids" optional="hide" widget="many2many_tags"/>
                    <field name="won_status" optional="hide"/>
                </tree>
            </xpath>
        </field>
    </record>

</odoo>
