<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Form View to Modify it -->
    <record id="crm_extend.crm_lead_view_form" model="ir.ui.view">
        <field name="name">crm_extend crm_lead_view_form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="before">
                <group name="contract_details" string="Contract Details">
                    <group>
                        <field name="contract_type" force_save="1"/>
                        <field name="contract_attachment_ids" widget="many2many_binary" force_save="1"/>
                    </group>
                    <group>
                        <field name="margin_percentage" force_save="1"/>
                        <field name="margin_amount" force_save="1"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="crm_extend.crm_case_tree_view_oppor" model="ir.ui.view">
        <field name="name">crm_extend crm_case_tree_view_oppor</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_case_tree_view_oppor"/>
        <field name="arch" type="xml">
            <xpath expr="//tree//field[@name='country_id']" position="after">
                <field name="contract_type" optional="hide"/>
                <field name="contract_attachment_ids" optional="hide" widget="many2many_tags"/>
                <field name="margin_percentage" optional="hide"/>
                <field name="margin_amount" optional="hide"/>
                <!-- Add new fields here -->
            </xpath>
        </field>
    </record>
</odoo>
