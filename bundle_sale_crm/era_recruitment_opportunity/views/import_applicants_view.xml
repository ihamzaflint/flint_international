<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="import_applicants_wizard_form_view" model="ir.ui.view">
            <field name="name">import.applicants.wizard.form.view</field>
            <field name="model">import.applicants.wizard</field>
            <field name="arch" type="xml">
                <form string="Job">
                    <!--                    <field name="active" invisible="1"/>-->
                    <!--                    <field name="company_id" invisible="1"/>-->
                    <sheet>
                        <group>

                            <group>
                                <field name="file_name" invisible="1"/>
                                <field widget="binary" height="64" name="file" filename="file_name"/>
                            </group>
                            <button name="download_excel_template"
                                    type="object"
                                    string="Download Excel Template"
                                    class="btn btn-link"
                                    icon="fa-download"/>

                        </group>
                    </sheet>
                    <footer>
                        <button string="Create" class="btn btn-primary" type="object" name="action_import_applicants"
                                data-hotkey="q"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="x"/>
                    </footer>
                </form>

            </field>
        </record>

    </data>
</odoo>