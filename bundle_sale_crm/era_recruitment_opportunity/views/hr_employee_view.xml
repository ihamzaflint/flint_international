<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form_inherit_code" model="ir.ui.view">
        <field name="name">hr.employee.view.form.code</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="////form//div[@class='oe_title mw-75 ps-0 pe-2']/h1" position="before">
                <h1 class="d-flex flex-row align-items-center">
                    <field name="code"/>
                </h1>
            </xpath>
        </field>
    </record>

    <record id="hr_employee_view_tree_inherit_code" model="ir.ui.view">
        <field name="name">hr.employee.view.tree.code</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_tree"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="code"/>
            </field>
        </field>
    </record>

</odoo>