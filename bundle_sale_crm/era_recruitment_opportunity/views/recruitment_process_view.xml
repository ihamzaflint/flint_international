<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="recruitment_process_form_view" model="ir.ui.view">
            <field name="name">recruitment.process.form.view</field>
            <field name="model">recruitment.process</field>
            <field name="arch" type="xml">
                <form string="ModelTitle">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="stages" widget="many2many_tags"/>
                            </group>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="recruitment_process_tree_view" model="ir.ui.view">
            <field name="name">recruitment.process.tree</field>
            <field name="model">recruitment.process</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="stages"/>
                </tree>
            </field>
        </record>


        <record id="recruitment_process_act_window" model="ir.actions.act_window">
            <field name="name">Recruitment Process</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">recruitment.process</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Add new Recruitment Process.
                </p>
            </field>
        </record>

        <menuitem id="menu_recruitment_process" name="Recruitment Process" action="recruitment_process_act_window"
                  parent="hr_recruitment.menu_hr_recruitment_root" sequence="10"/>

    </data>
</odoo>