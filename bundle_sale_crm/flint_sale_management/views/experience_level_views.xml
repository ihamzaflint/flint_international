<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="recruitment_experience_level_form_view">
        <field name="name">recruitment.experience.level.form</field>
        <field name="model">experience.level</field>
        <field name="arch" type="xml">
            <form string="Experience Level">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="recruitment_experience_level_tree_view">
        <field name="name">recruitment.experience.level.tree</field>
        <field name="model">experience.level</field>
        <field name="arch" type="xml">
            <tree string="Experience Level">
                <field name="name"/>
                <field name="description"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="recruitment_experience_level_action">
        <field name="name">Experience Level</field>
        <field name="res_model">experience.level</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="recruitment_experience_level_menu" name="Experience Level"
              parent="hr_recruitment.menu_hr_recruitment_configuration"
              action="recruitment_experience_level_action"/>
</odoo>