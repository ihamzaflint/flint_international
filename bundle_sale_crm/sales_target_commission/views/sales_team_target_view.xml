<odoo>
    <record id="view_sales_target_target_form" model="ir.ui.view">
        <field name="name">view.sales.team.target.form</field>
        <field name="model">sales.team.target</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="run" type="object" string="Run" invisible="[('state','!=', 'draft')]"
                            class="oe_highlight"/>
                    <button name="close" type="object" string="Close" class="oe_highlight"
                            confirm="The closing date is less than the End date"
                            invisible="['|',('state','!=','running'),('check_close_date','=',False)]"/>
                    <button name="close" type="object" string="Close" class="oe_highlight"
                            invisible="['|',('state','!=','running'),('check_close_date','=',True)]"/>
                    <button name="cancel" type="object" string="Cancel" class="oe_highlight" invisible="[('state','!=','running')]" />
                    <field name="state" readonly="1" widget="statusbar"
                           statusbar_visible="draft,running,closed,canceled"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="team_id" required="True" options="{'no_create': True}"/>
                            <field name="sales_person_id" required="True" options="{'no_create': True}"/>
                            <field name="policy_id" required="True" options="{'no_create': True}"/>
                            <label for="date_from" string="Period"/>
                            <div class="o_row">
                                <label for="date_from"/>
                                <field name="date_from" readonly="('state', '!=', 'draft')"/>
                                -
                                <label for="date_to"/>
                                <field name="date_to"/>
                            </div>
                        </group>
                        <group>
                            <field name="currency_id" options="{'no_create': True}"/>
                            <field name="target_amount"/>
                            <field name="achievement_amount"/>
                            <field name="achievement_percent"/>
                            <field name="target_achievement"/>
                            <field name="target_calc_based_on"/>
                            <field name="product_categ_ids"
                                   invisible="[('target_calc_based_on','!=','product_category')]"
                                   required="[('target_calc_based_on','=','product_category')]"
                                   widget="many2many_tags"/>
                            <field name="member_ids" invisible="1"/>
                            <field name="check_close_date" invisible="1"/>
                            <field name="target_commission_line_ids" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Services" name="product_list">
                            <field name="product_ids" widget="many2many_tags" readonly="('state', '!=', 'draft')"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_sales_target_target_tree" model="ir.ui.view">
        <field name="name">view.sales.team.target.tree</field>
        <field name="model">sales.team.target</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="team_id"/>
                <field name="sales_person_id"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="target_amount"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="view_sales_target_target_search" model="ir.ui.view">
        <field name="name">view.sales.team.target.search</field>
        <field name="model">sales.team.target</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="action_sales_target_target" model="ir.actions.act_window">
        <field name="name">Sales Team Target</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sales.team.target</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_sales_target_target" name="Sales Team Target" parent="sale.menu_sale_config"
              groups="sales_target_commission.group_sale_team_target"
              action="action_sales_target_target" sequence="16"/>

</odoo>

